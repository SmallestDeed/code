package com.sandu.search.service.index.impl;

import com.sandu.search.common.constant.IndexInfoQueryConfig;
import com.sandu.search.common.tools.JsonUtil;
import com.sandu.search.dao.CategoryProductIndexDao;
import com.sandu.search.entity.elasticsearch.po.ProductPo;
import com.sandu.search.exception.CategoryProductIndexException;
import com.sandu.search.service.index.CategoryProductIndexService;
import lombok.extern.slf4j.Slf4j;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

/**
 * 分类产品索引服务
 *
 * @date 20171212
 * @auth pengxuangang
 */
@Slf4j
@Service("categoryProductIndexService")
public class CategoryProductIndexServiceImpl implements CategoryProductIndexService {

    private final static String CLASS_LOG_PREFIX = "分类产品索引服务:";

    @Autowired
    private CategoryProductIndexDao categoryProductIndexDao;

    @Override
    public List<ProductPo> queryProductPoList(int start, int limit) throws CategoryProductIndexException {

        //初始化数据条数
        if (0 == limit) {
            limit = IndexInfoQueryConfig.DEFAULT_QUERY_PRODUCTPOINFO_LIMIT;
        }

        //查询产品信息
        log.info(CLASS_LOG_PREFIX + "正在查询产品信息第{}-{}条.", start, (start + limit));
        List<ProductPo> productPoList;
        try {
            productPoList = categoryProductIndexDao.queryProductPoList(start, limit);
        } catch (Exception e) {
            log.error(CLASS_LOG_PREFIX + "获取产品数据第{}-{}条失败,Exception:" + e, start, (start + limit));
            throw new CategoryProductIndexException(CLASS_LOG_PREFIX + "获取产品数据第" + start + "-" + (start + limit) + "条失败,Exception:" + e);
        }
        log.info(CLASS_LOG_PREFIX + "查询产品信息完成,List<ProductPo>长度:{}.", productPoList.size());

        return productPoList;
    }


    @Override
    public List<ProductPo> queryProductPoListByProductIdList(List<Integer> productIdList) throws CategoryProductIndexException {
        if (null == productIdList || 0 >= productIdList.size()) {
            return null;
        }

        //查询产品信息
        log.info(CLASS_LOG_PREFIX + "正在查询产品信息,productIdList:{}.", JsonUtil.toJson(productIdList));
        List<ProductPo> productPoList;
        try {
            productPoList = categoryProductIndexDao.queryProductPoListByProductIdList(productIdList);
        } catch (Exception e) {
            log.error(CLASS_LOG_PREFIX + "获取产品信息失败,productIdList:{}, Exception:{}.", JsonUtil.toJson(productIdList), e);
            throw new CategoryProductIndexException(CLASS_LOG_PREFIX + "获取产品信息失败,Exception:" + e);
        }
        log.info(CLASS_LOG_PREFIX + "查询产品信息完成,List<ProductPo>长度:{}.", productPoList.size());

        return productPoList;
    }
}
