package com.sandu.search.common.tools;

/**
 * 类工具
 *
 * @date 20180106
 * @auth pengxuangang
 */
public class ClassTool {

    /**
     * 根据类获取服务类Bean名
     *
     * @param clazz
     * @return
     */
    public static String getServiceClassBeanNameByClass(Class clazz) {

        if (null == clazz) {
            return null;
        }
        String beanName = clazz.getSimpleName();
        //转换首字母大小写
        return beanName.substring(0, 1).toLowerCase() + beanName.substring(1, beanName.length());
    }
}
