//Elasticsearch Config
PUT /product_info/_settings
{
  "index" :
  {
    "max_result_window" : 100000000
  }

}

/*ES产品分类数据映射*/
PUT /product_info
{
  "settings": {
    "index.mapping.total_fields.limit": 9999,
    "number_of_shards": 3,
    "number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "ik_analyzer": {
          "tokenizer": "ik_smart"
        },
        "pinyin_analyzer": {
          "tokenizer": "my_pinyin"
        },
        "ngram_analyzer": {
          "tokenizer": "ngram_tokenizer"
        }
      },
      "tokenizer": {
        "my_pinyin": {
          "type": "pinyin",
          "keep_separate_first_letter": false,
          "keep_full_pinyin": true,
          "keep_original": true,
          "limit_first_letter_length": 16,
          "lowercase": true,
          "remove_duplicated_term": true
        },
        "ngram_tokenizer": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 50,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      }
    }
  },
  "mappings": {
    "product": {
      "properties": {
        "productCode": {
          "type": "keyword"
        },
        "productName": {
          "type": "text",
          "analyzer": "ik_analyzer",
          "fields": {
            "pinyin": {
              "type": "text",
              "analyzer": "pinyin_analyzer"
            }
          }
        },
        "productBrandName": {
          "type": "text",
          "analyzer": "ik_analyzer",
          "fields": {
            "pinyin": {
              "type": "text",
              "analyzer": "pinyin_analyzer"
            }
          }
        },
        "productDesc": {
          "type": "text",
          "analyzer": "ik_analyzer"
        },
        "productSpecification": {
          "type": "text",
          "analyzer": "ik_analyzer"
        },
        "productCreateDate": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss"
        },
        "productModifyDate": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss"
        },
        "productPutawayDate": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss"
        },
        "productModelNumber": {
          "type": "text",
          "analyzer": "ngram_analyzer"
        },
        "firstLevelCategoryName": {
          "type": "keyword"
        },
        "secondLevelCategoryName": {
          "type": "keyword"
        },
        "thirdLevelCategoryName": {
          "type": "keyword"
        },
        "fourthLevelCategoryName": {
          "type": "keyword"
        },
        "fifthLevelCategoryName": {
          "type": "keyword"
        },
        "productCategoryLongCodeList": {
          "type": "keyword"
        },
        "productLength": {
          "type": "short"
        },
        "productHeight": {
          "type": "short"
        },
        "productMeasurementCode": {
          "type": "text",
          "analyzer": "standard"
        },
        "productCeilingLayoutIden": {
          "type": "text",
          "analyzer": "standard"
        },
        "productGroundLayoutIden": {
          "type": "text",
          "analyzer": "standard"
        },
        "productLayoutIden": {
          "type": "text",
          "analyzer": "standard"
        },
        "categoryName": {
          "type": "keyword"
        },
        "brandAndName": {
          "type": "text",
          "analyzer": "ik_analyzer"
        }
      }
    }
  }
}