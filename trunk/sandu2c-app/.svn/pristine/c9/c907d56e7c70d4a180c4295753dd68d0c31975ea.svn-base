        if (null != designPlanDetailVo) {
            LoginUser loginUser = LoginContext.getLoginUser(LoginUser.class);
            logger.info(CLASS_LOG_PREFIX + "获取登录用户信息:getUserFromCache:{}.", null == loginUser ? null : loginUser.toString());
            if (null != loginUser) {
                //组装查询用户收藏条件
