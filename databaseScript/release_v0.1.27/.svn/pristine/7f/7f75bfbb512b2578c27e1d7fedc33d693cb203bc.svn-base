
#创建电子名片转发记录表
use app_online_30;
CREATE TABLE IF NOT EXISTS user_card_transmit_record(
	id INT NOT NULL AUTO_INCREMENT COMMENT '主键Id',
	user_id INT NOT NULL COMMENT '用户id，与sys_user表中的主键关联',
	user_card_id INT NOT NULL COMMENT '用户电子名片id，与user_card表中的主键关联',
	transmit_type TINYINT NOT NULL COMMENT '1:转发微信好友,2:转发微信朋友圈,3:转发名片海报',

	create_time TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP COMMENT '创建时间',
	creator VARCHAR(30) NOT NULL DEFAULT '' COMMENT '创建者',
	update_time TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP  COMMENT '修改时间，自动更新',
	updater VARCHAR(30) NOT NULL DEFAULT '' COMMENT '更新者',
	is_delete TINYINT NOT NULL DEFAULT 0 COMMENT '逻辑删除字段,0:正常 1:已删除',
	remark VARCHAR(200) NOT NULL DEFAULT '' COMMENT '备注',

	PRIMARY KEY (id),
	KEY key_user_id(user_id),
	KEY key_user_card_id(user_card_id)
) DEFAULT CHARSET=utf8 COMMENT='电子名片转发记录表';