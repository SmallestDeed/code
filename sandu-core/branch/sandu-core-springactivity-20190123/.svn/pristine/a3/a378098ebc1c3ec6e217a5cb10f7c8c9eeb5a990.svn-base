package com.sandu.api.springFestivalActivity.input;

import lombok.Data;

import java.io.Serializable;

@Data
public class GetUserTaskBo implements Serializable, NonNullPropoties {
    /**
     * 用户任务ID
     */
    private Long id;
    /**
     * 用户ID
     */
    private Long userId;
    /**
     * 活动ID
     */
    private Long activityId;
    /**
     * 任务1状态
     */
    private Byte taskOneState;
    /**
     * 任务2状态
     */
    private Byte taskTwoState;
    /**
     * 任务3状态
     */
    private Byte taskThreeState;

    @Override
    public boolean nonNull() {
        return id != null &&
                userId != null &&
                activityId != null &&
                taskOneState != null &&
                taskTwoState != null &&
                taskThreeState != null;
    }
}
