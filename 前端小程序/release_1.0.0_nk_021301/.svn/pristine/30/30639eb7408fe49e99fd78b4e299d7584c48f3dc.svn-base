.sales{
  width: 100%;
}
.sales-top{
  width: 100%;
  height: 420rpx;
}
.sales-top image{
  width: 100%;
  height: 100%;
}
.sales-list{
  position: absolute;
  left: 0;
  top:400rpx;
  width: 100%;
  height: auto;
  background:#fff;
  border-radius: 15rpx 15rpx 0 0;
}
.sales-item{
  overflow: hidden;
  position: relative;
  margin-top:60rpx;
  width: 100%;
}
.sales-item-left{
  position: relative;

  float:left;
  margin-left:30rpx; 
  width: 220rpx;
	height: 220rpx;

}
.tapView{
  top: 10rpx;
}
.sales-item-left image{
  width: 100%;
  height: 100%;
  border-radius: 6rpx;
  background: #e8e8e8;
}
.sales-item-rigt{
  float:right;
  margin-right:30rpx; 
  width: 438rpx;
}
.sales-item-title{
  font-weight: 600;
  width:100%;
	font-size: 28rpx;
	line-height: 44rpx;
	letter-spacing: 0;
	color: #333333;
}
.sales-item-price{
  margin-top:30rpx;
  width: 438rpx;
  height: 25rpx;
  line-height: 25rpx;
  font-size: 32rpx;
}
.sales-item-price-left{
  float:left;
  font-weight: 600;
  color: #ff6419;
  font-size: 32rpx;
  margin-left: -5rpx;
}
.sales-item-price-rigt{
  margin-left: 22rpx;
  float:left;
  color: #999999;
  text-decoration:line-through;
  font-size: 24rpx;
}
.sales-item-button{
  margin-top:30rpx;
  width: 438rpx;
  font-size: 24rpx;
  color: #999999;

}
.sales-button{
  position: absolute;
  right: 30rpx;
  bottom:0;
  width: 180rpx;
	height: 60rpx;
  line-height: 60rpx;
	background-color: #ff6419;
	border-radius: 6rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center
}
.sales-icon{
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 80rpx;
	height: 40rpx;
	background-color: #ff6419;
  font-size: 24rpx;
  line-height: 40rpx;
  text-align: center;
  color: #fff;
	border-radius: 0px 18px 18px 0px;
}
.space{
  height: 60rpx;
  width: 750rpx;
  background-color: #ffffff;
}
.sales-button2{
  position: absolute;
  right: 30rpx;
  bottom:0;
  width: 180rpx;
	height: 60rpx;
  line-height: 60rpx;
	background-color: #ff6419;
	border-radius: 6rpx;
  color: #e8e8e8;
  font-size: 32rpx;
  text-align: center
}
.repertory{
  display: flex;flex-direction: row
}
.num{
  margin-left: 5rpx;
  margin-right: 5rpx;
}