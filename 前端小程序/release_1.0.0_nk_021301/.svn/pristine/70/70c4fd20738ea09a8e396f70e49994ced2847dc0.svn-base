/* pages/evaluate/evaluate.wxss */
page {
    display: block;
    min-height: 100%;
    padding-top: 20rpx;
    background-color: #f5f5f5;
    box-sizing: border-box;
}
view {
  box-sizing: border-box;
}
/* 弹框 */
.evalSucess{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1111;
}
.evalbox {
  width: 540rpx;
	height: 550rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -270rpx;
  margin-top: -225rpx;
}
.eval_head {
  height: 56rpx;
  line-height: 56rpx;
  text-align: right;
  padding: 10rpx;
}
.eval_head image {
  width: 36rpx;
  height: 36rpx;
}
.eval_main {
  text-align: center;
  font-size: 40rpx;
  color: #333;
}
.eval_main image{
  width: 160rpx;
  height: 160rpx;
}
.eval_but {
  width: 280rpx;
	height: 80rpx;
	border-radius: 40rpx;
	border: solid 1px #ff6419;
  text-align: center;
  font-size: 32rpx;
  color: #ff6419;
  line-height: 80rpx;
  margin: 0 auto;
  margin-top: 83rpx;
}
/* 主体 */
.item {
  background: #fff;
  margin-bottom: 20rpx;
  min-height: 862rpx;
}
.head {
  padding: 30rpx;
  border-bottom: solid 1px #e8e8e8;
  display: flex;
}
.head_img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 6rpx;
  margin-right: 30rpx;
}
.title {
  padding-top: 20rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.fen_item {
  width: 44rpx;
  height: 44rpx;
  margin-right: 34rpx;
}
.box {
  padding:0 30rpx;
  position: relative;
  padding-bottom: 30rpx;
}
.textarea {
  position: relative;
  font-size: 24rpx;
  color: #333;
  width: 90%;
  min-height: 294rpx;
  padding: 30rpx 0;
  word-break:break-all;
  word-wrap:break-word;
}
.textarea_tit {
  position: absolute;
  right: 29rpx;
  top: 30rpx;
  color: #999;
  font-size: 24rpx;
}
.itemimg_box {
  width: 156rpx;
	height: 156rpx;
	background-color: #f5f5f5;
	border-radius: 6rpx;
  display: inline-block;
  position: relative;
  vertical-align: middle;
  margin-right: 22rpx;
  margin-bottom: 20rpx;
}
.itemimg_box:nth-of-type(4) {
  margin-right: 0;
}
.pic_img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  border-radius: 6rpx;
}
.delimg {
  width:56rpx;
  height:56rpx;
  position:absolute;
  right:-28rpx;
  top:-28rpx;
  z-index:1;

}
.addImgbox {
  width: 156rpx;
	height: 156rpx;
	background-color: #f5f5f5;
	border-radius: 6rpx;
  text-align: center;
  font-size: 20rpx;
  color: #333;
  padding: 38rpx;
  display: inline-block;
  vertical-align: middle;
  margin-bottom: 20rpx;
}
.addImg {
  width: 56rpx;
  height: 46rpx;
}

.niming {
  border-top: solid 1px #e8e8e8;
  height: 120rpx;
  line-height: 120rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}
.niming text {
  vertical-align: middle;
}
.niming_img {
  width: 56rpx;
  height: 56rpx;
  vertical-align: middle;
  margin-right: 13rpx;
}
.niming_tit {
  font-size: 24rpx;
  color: #999;
  float: right;
  margin-right: 10rpx;
}
/* 底部 */
.footer {
  height: 189rpx;
  padding-top: 85rpx;
  text-align: center
}
.one {
  margin-top: 130rpx;
}
.footer_but {
  display: inline-block;
  color: #fff;
  width: 690rpx;
	height: 88rpx;
  line-height: 88rpx;
	background-color: #ff6419;
	border-radius: 40rpx;
  font-size: 32rpx;
}