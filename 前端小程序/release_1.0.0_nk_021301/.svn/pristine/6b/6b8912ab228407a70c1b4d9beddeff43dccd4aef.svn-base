page{
    background: #f5f5f5;
    box-sizing: border-box;
    padding-top: 20rpx;
}
.main view{
    box-sizing: border-box;
}
.main .header{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
	background-color: #ffffff;
    padding: 0 30rpx;
    font-size: 28rpx;
	font-weight: 600;
	color: #333333;
    border-bottom: solid 1rpx #e8e8e8; 
}
.main .header .pull-left{
    float: left;
}
.main .header .pull-right{
    float: right;
    color: #ff6419;
}

.main .goods{
    width: 100%;
    padding: 30rpx 90rpx 30rpx 210rpx;
    position: relative;
    height: 220rpx;
    overflow: hidden;
    background: #fff;
}
.main .goods::after{
    content: '';
    width: 100%;
    left: 30rpx;
    height: 2rpx;
    position: absolute;
    background: #e8e8e8;
    bottom:0;
}
.main .goods image{
    position: absolute;
    left: 30rpx;
    top: 30rpx;
    width: 160rpx;
    height: 160rpx;
}
.main .goods .num{
    position: absolute;
    right: 30rpx;
    bottom: 56rpx;
    font-size: 32rpx;
	color: #333333;
}
.main .goods view{
    width: 100%;
}
.main .goods view.name{
    height: 28rpx;
	font-size: 28rpx;
    line-height: 28rpx;
    margin-bottom: 30rpx;
	color: #333333;
}
.main .goods view.point{
    height: 28rpx;
	font-size: 28rpx;
    line-height: 28rpx;
    margin-bottom: 30rpx;
	color: #333333;
}
.main .goods view.price{
    height: 24rpx;
    line-height: 24rpx;
    font-size: 24rpx;
	color: #999999;
}
.main .goods view.price text{
    text-decoration: line-through;
}

.main .goodsInfo{
    width: 100%;
    padding: 25rpx 30rpx;
    background: #fff;
    border-bottom: solid 1rpx #e8e8e8;
}
.main .goodsInfo view{
    height: 48rpx;
	font-size: 28rpx;
    line-height: 48rpx;
	color: #333333;
}
.main .goodsInfo view text{
    float: right;
}
.main .items{
    width: 100%;
    padding: 0 30rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 28rpx;
	color: #333333;
    background: #fff;
}
.main .items text{
    float: right;
}
.main .items.boder{
    border-bottom: solid 1rpx #e8e8e8;
}
.strong{
    font-weight: 600;
}

.main .citys{
    width: 100%;
    background: #fff;
    position: relative;
    padding-left: 30rpx;
    margin-top: 20rpx;
}
.main .citys::after{
    content: '';
    width: calc(100% - 30rpx);
    width: -webkit-calc(100% - 30rpx);
    width: -moz-calc(100% - 30rpx);
    height: 2rpx;
    position: absolute;
    left: 30rpx;
    top: 80rpx;
    background: #e8e8e8;
}
.main .citys .title{
    font-size: 28rpx;
    height: 80rpx;
    line-height: 80rpx;
	color: #333333;
}
.main .citys .body{
    width: 100%;
    padding: 25rpx 0;
    padding-right: 30rpx;
}
.main .citys .body view{
    width: 100%;
    line-height: 48rpx;
    font-size: 28rpx;
	color: #333333;
}
.main .citys .body view text{
    float: right;
}

.main .rows{
    width: 100%;
    padding: 25rpx 30rpx;
    background: #fff;
    margin-top: 20rpx;
}
.main .rows .item{
    width: 100%;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 28rpx;
    color: #333;
}
.main .rows .item text{
    float: right;
}

.row{
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    padding: 25rpx 30rpx;
    padding-left: 180rpx;
    position: relative;
    min-height: 88rpx;
    color: #333;
    font-size: 28rpx;
}
.row .text{
    width: 120rpx;
    height: 88rpx;
    line-height: 88rpx;
    position: absolute;
    left: 30rpx;
    top: 0;
}
.row .message{
    width: 100%;
    text-align: right;
    line-height: 48rpx;
    height: 48rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}