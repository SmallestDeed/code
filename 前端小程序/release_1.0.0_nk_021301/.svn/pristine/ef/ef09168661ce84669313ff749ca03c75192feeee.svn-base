/* component/quick-navigation/quick-navigation.wxss */

.quick-navigation {
    width: 560rpx;
    height: 98rpx;
    position: fixed;
    z-index: 1000;
    right: 0rpx;
    bottom: 164rpx;
    overflow: hidden;
    transition: all 0.2s;
}

.box-mainfuntion {
    width: 580rpx;
    height: 98rpx;
    text-align: center;
    box-sizing: border-box;
    color: #999;
    font-size: 22rpx;
    overflow: hidden;
    transition: all 0.2s;
    display: flex;
    background-color: #fff;
    border-radius: 10rpx 0px 0px 10rpx;
}

.box-mainfuntion image {
    margin-top: 11rpx;
    width: 48rpx;
    height: 48rpx;
}

.box-mainfuntion .text {
    margin-top: -5rpx;
}

.navigation-box {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    position: fixed;
    left: 0;
    top: 0;
    transition: all 0.2s;
}

.box-mainbtn {
    width: 60rpx;
    height: 98rpx;
    position: absolute;
    bottom: 0rpx;
    right: 0;
    box-sizing: border-box;
}

.box-mainbtn .main-btn-text {
    width: 60rpx;
    height: 98rpx;
    position: absolute;
    bottom: 0rpx;
    right: 0;
    box-sizing: border-box;
}

.box-mainbtn image {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.box-mainbtn image.main-btn-cancel {
    width: 28rpx;
    height: 28rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.navigation-mask {
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 10;
}
