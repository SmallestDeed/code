page{
    background: #f5f5f5;
    padding-top: 140rpx;
    box-sizing: border-box;
}
.main{
    width: 100%;
}
.main view{
    width: 100%;
    box-sizing: border-box;
}
.main .nav{
    height: 120rpx;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 5;
    background: #fff;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #f5f5f5;
}
.main .nav::after{
    content: '';
    width: 2rpx;
    height: 30rpx;
    top: 50%;
    margin-top: -15rpx;
    left: 50%;
    margin-left: -1rpx;
    position: absolute;
    background: #e8e8e8;
}
.main .nav .weui-flex__item{
    width: 50%;
    float: left;
    height: 100%;
    line-height: 120rpx;
    font-size: 28rpx;
	color: #333333;
}


.main .weui-panel{
    background: #fff;
    margin-bottom: 20rpx;
}
.main .weui-panel .weui-panel__hd{
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 80rpx 0 30rpx;
    font-size: 28rpx;
	color: #333333;
    border-bottom: 1rpx solid #e8e8e8;
    position: relative;
}
.main .weui-panel .weui-panel__hd image{
    position: absolute;
    display: block;
    width: 38rpx;
    height: 38rpx;
    right: 25rpx;
    top: 50%;
    margin-top: -19rpx;
}
.main .weui-panel .weui-panel__hd text{
    float: left;
    height: 100%;
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.main .weui-panel .weui-panel__hd text.pull-left{
    width: 80%;
}
.main .weui-panel .weui-panel__hd text.pull-right{
    width: 20%;
    text-align: right;
}

.main .weui-flex{
    padding: 30rpx;
    padding-left: 210rpx;
    position: relative;
    height: 220rpx;
    background: #fff;
    box-sizing: border-box;
    border-bottom: 1rpx solid #e8e8e8;
}
.main .weui-flex image{
    position: absolute;
    display: block;
    left: 30rpx;
    top: 30rpx;
    width: 160rpx;
    height: 160rpx;
}
.main .weui-flex .row{
    width: 100%;
    height: 100%;
}

.main .weui-flex view.gift-name{
    font-size: 28rpx;
	color: #333333;
    margin: 5rpx 0 30rpx; 
    height: 28rpx;
    line-height: 28rpx;
    padding: 0;
    text-indent: 0;
}
.main .weui-flex view.gift-point{
    font-size: 28rpx;
	color: #333333;
    margin: 5rpx 0 30rpx; 
    height: 28rpx;
    line-height: 28rpx;
    padding: 0;
    text-indent: 0;
}
.main .weui-flex .row view:last-child{
    font-size: 24rpx;
	color: #999999;
    height: 24rpx;
    line-height: 24rpx;
    overflow: hidden;
    text-indent: 0;
}
.gift-values{
    text-decoration: line-through;
}

.main .footer{
    height: 88rpx;
	background-color: #ffffff;
    padding: 0 30rpx;
    padding-right: 260rpx;
    font-size: 24rpx;
    line-height: 88rpx;
	color: #999999;
    position: relative;
}
.main .footer .pull-right{
    width: 180rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: right;
    position: absolute;
    right: 30rpx;
    top: 14rpx;
}
.main .footer .pull-right.btnVe{
    background-color: #ff6419;
    border-radius: 100px;
    font-size: 28rpx;
	color: #ffffff;
    text-align: center;
}