.newNav  .nav {
    width: 80rpx;
    min-height: 80rpx;
    border-radius: 100px;
    position: fixed;
    right: 40rpx;
    bottom: 100rpx;
    background: #fff;
    z-index: 1001;
    box-sizing: border-box;
    padding: 30rpx 0 80rpx;
    transition-duration: 0.15s;
}

.newNav  .nav.shadows .rows {
    bottom: 80rpx;
}

.newNav  .nav.shadows .rows .items {
    opacity: 1;
    transition-duration: 0.3s;
}

.newNav .nav  .navImg {
    display: block;
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    bottom: 0;
    left: 0;
    box-shadow: 0px 3px 30px rgba(0, 0, 0, 0.2);
    border-radius: 50%;
}

.newNav .nav .rows {
    width: 100%;
    text-align: center;
    overflow: hidden;
    transition-duration: 0.15s;
    position: absolute;
    bottom: 0;
    left: 0;
}

.newNav .nav .rows .items {
    width: 100%;
    height: 68rpx;
    margin-bottom: 20rpx;
    opacity: 0;
}

.newNav .nav .rows .items image {
    width: 48rpx;
    height: 48rpx;
    margin: 0 auto;
    display: block;
}

.newNav .nav .rows .items .text {
    width: 100%;
    height: 20rpx;
    line-height: 20rpx;
    font-size: 20rpx;
    color: #1a1a1a;
}
