/*公共的蒙层样式*/
 .dialogWrap {
   width: 100%;
   height: 100%;
   background:#f5f5f5;
   position: fixed;
   top: 0;
   left: 0;
   transform: translate3d(0, 0, 0);
   animation: .1s opacity2;
   -webkit-animation: .2s opacity2;
 }
@keyframes opacity2 {
  0% {
    opacity: 0;
  }
  50% {
    opacity: .5;
  }
  100% {
    opacity: 1;
  }
}

@-webkit-keyframes opacity2 {
  0% {
    opacity: 0;
  }
  50% {
    opacity: .5;
  }
  100% {
    opacity: 1;
  }
}
