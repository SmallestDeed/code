<view class="block block-top">
    <view class="words">当前剩余户型</view>
    <view class="nums">16
        <text class="em">套</text>
    </view>
    <image src="{{staticImageUrl}}score_pic_coin@3x.png" class="bg"></image>
</view>
<view class="block">
    <view class="block_list">
        <radio-group bindchange="radioChange">
            <label class="block_list_iteam" wx:for="{{radioItems}}" wx:key="value">
                <view class="left">{{item.name}}</view>
                <view class="right">
                    <radio class="block-check" value="{{item.value}}" checked="{{item.checked}}" />
                    <view class="block-check-type" wx:if="{{item.checked}}">
                    	 <image src="{{staticImageUrl}}list_icon_chosse_sct@3x.png" class="check-bg"></image>
                    </view>
                    <view class="block-check-type"  wx:if="{{!item.checked}}">
                    	 <image src="{{staticImageUrl}}list_icon_chosse_nor@3x.png" class="check-bg"></image>
                    </view>
                </view>
            </label>
        </radio-group>
    </view>
</view>
<view class="block-points clearfix">
	<view class="fl">当前剩余度币：2000</view>
	<view class="fr">去充值</view>
</view>
<view class="block-btn">
	<button class="btn" type="primary">确认购买</button>
</view>
