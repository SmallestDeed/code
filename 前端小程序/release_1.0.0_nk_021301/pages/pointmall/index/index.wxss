.main{
    width: 100%;
}
.main image.main_bgImg{
    display: block;
    width: 100%;
    height: 330rpx;
    position: relative;
}
.main .mainBody{
    box-sizing: border-box;
    width: 100%;
    height: 100rpx;
    background: #fff;
    position: relative;
}
.main .mainBody .body_top{
    width: 690rpx;
	height: 160rpx;
    box-sizing: border-box;
    padding: 37rpx 0;
	background-color: #ffffff;
	box-shadow: 0px 5rpx 14rpx 0px 
		#f5f5f5;
	border-radius: 4px;
    position: absolute;
    top: -90rpx;
    left: 30rpx;
    text-align: center;
    font-size: 28rpx;
    line-height: 1;
	color: #333333;
}
.main .mainBody .body_top .items{
    width: 50%;
    float: left;
    height: 100%;
}
.main .mainBody .body_top .items text{
    width: 100%;
    display: block;
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.main .mainBody .body_top .items text:last-child{
    font-size: 29rpx;
	font-weight: 600;
    margin-top: 30rpx;
}

.main .goodsList{
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    padding-right: 10rpx;
    display: inline-block;
}
.main .goodsList .items{
    width: 335rpx;
    margin-right: 20rpx;
    margin-bottom: 40rpx;
    float: left;
   
}

.main .goodsList .items image{
    width: 100%;
    display: block;
	height: 335rpx;
    border-radius: 6rpx;
     box-sizing: border-box;
    /*border: 1rpx solid #ebebeb;*/
}
.main .goodsList .items view{
    width: 100%;
    margin-top: 15rpx;
    line-height: 33rpx;
    height: 33rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
	color: #333333;
}
.main .goodsList .items view.data{
    color: #ff6419;
}
.main .goodsList .items view.data text{
    display: inline-block;
    margin-left: 20rpx;
    max-width: 45%;
    font-size: 22rpx;
    text-decoration: line-through;
    color: #999999;
}