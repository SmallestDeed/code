/* pages/house-goods/house-goods.wxss */
/* 总样式 */
page{
    width: 100%;
    height: 100%;
}
.house-goods {
  padding-left:150rpx;
  height: 100%;
  position: relative;
  box-sizing: border-box;
  border-top:solid #e8e8e8 1rpx;
}
/* 左边导航样式 */
.house-goods .goods-classification-left {
  position:fixed;
  top:0;
  left:0;
  width:150rpx;
  height:100%; 
  overflow-y: auto;
  background-color:#f9f9f9;
  border-top:solid #e8e8e8 1rpx;

}
.classification-text{
  
  height:90rpx;
  width:150rpx;
  font-size:28rpx;
  text-align: center;
  line-height: 90rpx;
}
.house-goods .goods-classification-left .active{
  background-color:white;
  color:#ff6419;
}

/* 右边小分类样式 */

 .house-goods .goods-classification-right {
   display: block;
   float: left;
   width: 100%;
   box-sizing: border-box;
   padding-left: 30rpx;
   padding-left: calc((100% - 3 * 148rpx) / 4);
   padding-left: -webkit-calc((100% - 3 * 148rpx) / 4);
   padding-left: -moz-calc((100% - 3 * 148rpx) / 4);
   overflow-x: hidden;
 } 
 ::-webkit-scrollbar{
     display: none;
 }
 .house-goods .goods-classification-right .classification-image {
  width:148rpx;
  height:180rpx; 
  margin-bottom:30rpx; 
  margin-right:30rpx;
  margin-right: calc((100% - 3 * 148rpx) / 4);
  margin-right: -webkit-calc((100% - 3 * 148rpx) / 4);
  margin-right: -moz-calc((100% - 3 * 148rpx) / 4);
 }
 .house-goods .goods-classification-right .classification-image .image-box{
  width:148rpx;
  height:148rpx;
  margin-top: 30rpx;
 }
 .classification-image .image-box image {
   width:148rpx;
   height:148rpx;
 }
 .classification-image .text {
  text-align: center;
  font-size:26rpx;
 }