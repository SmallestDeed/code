<!--pages/activePt/activePt.wxml-->
<view class='activeItem' wx:for='{{activeList}}'>
    <image class='leftImg' src='{{resourcePath+item.spuPicPath}}'></image>
    <view class='info'>
      <view class='name'>{{item.activityName}}</view>
      <view class='price'>
        <view class='pri'>￥{{item.activityPrice}}</view>
        <view class='pepole'>{{item.totalNumber}}人拼团价</view>
      </view>
      <view class='title'>原价：￥{{item.spuPrice}}元</view>
      <view class='btn' bindtap='toActive' data-id='{{item.id}}' data-spuid='{{item.spuId}}'>立即拼团</view>
      
    </view>
</view>
<block wx:if="{{!activeList.length>0}}">
<view class="empty_tip ">
  <image class="image" src="{{staticImageUrl}}me_pic_no_03.png"></image>
  <view class="txt">活动正在筹备中，敬请期待...</view>
</view>
</block>