/* pages/activeKj/activeKj.wxss */
page{
  background-color: #fff;
}
.activeItem{
  height: 280rpx;
  width: 690rpx;
  border-radius: 15rpx;
  background-color: #fff;
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: flex;
  box-shadow: 0px 10rpx 60rpx rgba(153, 153, 153, 0.3);
}

.leftImg{
  height: 280rpx;
  width: 280rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.info{
  width: 380rpx;
  overflow: hidden;
  
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
}
.name{
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 25rpx;
  white-space: nowrap;
  text-overflow:ellipsis; 
  overflow:hidden;
}
.title{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9b9b9b;
}
.time{
  margin-top: 20rpx;
  display: flex;
  color: #9b9b9b;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left:-5rpx;

}
.price{
  display: flex;
  margin-top: 30rpx;
}
.pri{
  color: #ff6419;
  font-size: 30rpx;
  line-height: 50rpx;
  width:190rpx;

}
.btn{
  height: 50rpx;
  width: 140rpx;
  background: linear-gradient(to right, #ffb366 , #ff6419); /* 标准的语法 */
  border-radius: 25rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  text-align: center;
  color: #fff;
  margin-left: 20rpx;
  box-shadow: 0px 10rpx 30rpx rgba(255, 100, 25, 0.2);
  font-weight: 600;
}
.timedetail{
  display: inline-block;
  height: 40rpx;
  width: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background-color: #000;
  color: #fff;
  font-weight: 600;
  margin: 0 5px;
  border-radius: 4rpx;
  font-size: 24rpx;
}

.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  margin-top:-100rpx;
  top:0;

}
.empty_tip .image{
  width: 403rpx;
	height: 270rpx;
}
.empty_tip .txt{
  font-size: 28rpx;
  color: #999999;
  margin-top:40rpx;
}