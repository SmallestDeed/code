<!--pages/decoration/caseList/caseList.wxml-->
<view class='bck'>
  <block wx:for='{{artList}}'>
    <view class='cases'>
      <image src='{{item.picPath?resourcePath+item.picPath:"/static/image/goods_pic_no.png"}}' class='img' mode='aspectFill'></image>
      <view class='content'>
      <view class='title'>{{item.articleTitle}}</view>
      <!-- <view class='txt'>{{item.content}}</view> -->
      <view class='more' bindtap='toArticles' data-id='{{item.articleId}}'>
        <view class='text fl'>查看详情</view>
        <image class='icon fr' src='/static/image/list_icon_more.png'></image>
      </view>
      </view>
    </view>
    <view class='gary'></view>
  </block>
  </view>
