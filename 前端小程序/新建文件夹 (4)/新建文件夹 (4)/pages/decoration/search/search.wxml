<view class="main_body wen"  style='height:{{caseListheight}}; padding-top:176rpx;overflow:{{caseListOverflow}};'>
    <view class='searchView' style="{{!showStorage?'padding-right:30rpx;':'padding-right:120rpx;'}}">
        <view class="ppg_search">
            <input placeholder="找{{getType.typeText(brandType)}}" type="text" bindinput='setKeyword' bindfocus="showStorageFun" value="{{keyword}}"  bindconfirm="doFilter"></input>
            <image src="{{imgURL}}ppg_search.png" bindtap="doFilter"></image>
            <view style="clear: both;"></view>
        </view>
        <view class='sel' bindtap="doFilter" style="{{showStorage?'opacity:1;right:30rpx':'opacity:0;right:50rpx;'}}">搜索</view>
    </view>

    <view class='showStorage' wx:if="{{showStorage}}">
        <view class='rows' wx:if="{{hotList.length>0}}">
            <view class='title'>热门搜索</view>
            <view class='bodys'>
                <view class='items' 
                    wx:for="{{hotList}}"
                    wx:key="{{index}}"
                    bindtap='goSearch' 
                    data-val='{{item.name}}'
                >{{item.name}}</view>
            </view>
        </view>
        <view class='rows' wx:if='{{isShow&&hotList.length<=0}}'>
            <view class='title' style='margin:0;'>暂无热门搜索</view>
        </view>
         <view class='rows' wx:if='{{history.length>0}}'>
            <view class='title'>历史搜索 <image bindtap='delHistory' src='/static/image/huxing_icon_delete.png'></image></view>
            <view class='bodys'>
                <view class='items' 
                    wx:for="{{history}}"
                    wx:key="{{index}}"
                    bindtap='goSearch' 
                    data-val='{{item.name}}'
                >{{item.name}}</view>
            </view>
        </view>
        <view class='rows' wx:if='{{isShow&&history.length<=0}}'>
            <view class='title' style='margin:0;'>暂无历史搜索</view>
        </view>

    </view>

    <view class="ppg_dzss">
            <view class='filter' style='{{fixed?"position: fixed;border-bottom:1rpx solid #f5f5f5;":""}}'>
                <view class='options'
                        bindtap="changeFun"
                        style='{{showCityView?"color:#ff6419":""}}'
                >
                    {{city}}<image src='{{showCityView?"/static/image/down.png":"/static/image/up.png"}}'></image>
                </view>
                <view class='options'  
                    style='{{sortFlag2?"color:#ff6419":""}}'  bindtap='changeSort2'>
                        {{sortName2}}<image src='{{sortFlag2?"/static/image/down.png":"/static/image/up.png"}}'></image>
                    </view>
                <view class='options opt2'  style='{{sortFlag?"color:#ff6419":""}}'  bindtap='changeSort'>
                    {{sortName}}<image src='/static/image/best_news.png'></image>
                </view>
                </view>
                <view class='sortOptions' wx:if='{{sortFlag2}}'>
                    <view class='{{sortFlag2Index == index?"optionsSelect":"options"}}' 
                        bindtap='commitSort2' 
                        data-type='newttest' 
                        data-name='{{item.styleName=="全部"?(getType.typeText(brandType)=="建材家居"?"分类":(getType.typeText(brandType)!="工长"?"风格":"工种")):item.styleName}}' 
                        wx:for="{{styleName}}"
                        data-id="{{item.styleId}}"
                    data-index='{{index}}'>
                        {{item.styleName}}
                    </view>
                </view>
                <view class='sortOptions' wx:if='{{sortFlag}}'>
                    <view class='{{sortType=="newttest"?"optionsSelect":"options"}}' 
                        bindtap='commitSort' 
                        data-type='newttest' 
                    data-name='最新'>
                        最新
                    </view>
                    <view class='{{sortType=="hottest"?"optionsSelect":"options"}}' 
                        bindtap='commitSort' 
                        data-type='hottest' 
                    data-name='最热'>
                        最热
                    </view>
            </view>
            </view>
    <!--根据type值返回描述文字和链接  -->
        <wxs module="getType">
            var fn = function(type) {
                if (type == undefined)
                    return;
                var str = ""
                if (type == 3)
                    str = "设计师";
                else if (type == 1)
                    str = "品牌厂商";
                else if (type == 2)
                    str = "建材家居";
                else if (type == 5)
                    str = "装修公司";
                else if (type == 6)
                    str = "施工单位";
                else if (type == 4)
                    str = "设计公司";
                return str;
            }
            var fn2 = function(type, id) {
                if (type == undefined || id == undefined)
                    return;
                var str = ""
                if (type == 3)
                    str = "../designerDetail/designerDetail?id=" + id;
                else if (type == 2)
                    str = "../materialDetail/materialDetail?id=" + id;
                else if (type == 5)
                    str = "../companyDetail/companyDetail?id=" + id;
                else if (type == 6)
                    str = "../builderDetail/builderDetail?id=" + id;
                return str;
            }
            module.exports = fn
            module.exports = {
                typeText: fn,
                typeHref: fn2,
            }
        </wxs>
    <view class="zxfw_neiro">
            <view class='noMore' wx:if="{{exampleList.length<=0&&!showStorage&&showNoMore}}">
                <image src='/static/image/undefined.png'></image>
                <view class='txts'>没有您搜索的{{getType.typeText(brandType)}}呢</view>
            </view>
            <view class="zxfw_sjsdm" wx:for="{{exampleList}}" wx:key="{{index}}" wx:for-item="exampleItem" bindtap="toDetail" data-id="{{exampleItem.id}}">
                <view class="sjsdm_jieshao">
                    <view class="sjsdm_left">
                        <view class="{{brandType==3?'sjsdm_logo2':'sjsdm_logo'}}">
                            <image  src="{{exampleItem.logoUrl?resourcePath + exampleItem.logoUrl:defaultImg}}"></image>
                        </view>
                    </view>
                    <view class="sjsdm_right">
                        <view class="sjsdm_title">
                            <view class="sjsdm_ming">{{exampleItem.shopName}}</view>
                            <view wx:if="{{exampleItem.memberYear>=0}}" class="sjsdm_hydj">
                                <block wx:if="{{exampleItem.businessType==3}}">
                                    <image src='/static/image/businessType1.png' class='img1'></image>
                                </block>
                                <block wx:if="{{exampleItem.businessType==4}}">
                                    <image src='/static/image/businessType2.png' class='img2'></image>
                                </block>
                                <block wx:if="{{exampleItem.businessType==5}}">
                                    <image src='/static/image/businessType3.png' class='img3'></image>
                                </block>
                                <block wx:if="{{exampleItem.businessType==6}}">
                                    <image src='/static/image/businessType4.png' class='img4'></image>
                                </block>
                                <block wx:if="{{exampleItem.businessType==2}}">
                                    <image src='/static/image/businessType5.png' class='img5'></image>
                                </block>
                                <image class='member' src='/static/image/member.png'></image>
                                <image class='renzheng' src='/static/image/renzheng.png'></image>
                            </view>
                        </view>
                        <view class="cplx_txt">{{exampleItem.categoryNames}}</view>
                        <view class="cplx_txt">
                            <view class='texts'>
                                <image src='/static/image/citys.png'></image>
                                {{exampleItem.provinceName+exampleItem.cityName}}
                            </view>
                            <view class='like texts'>
                                <image src='/static/image/likes.png'></image>
                                {{exampleItem.visitCount}}
                            </view>
                            <block wx:if='{{exampleItem.designFeeStarting!=null && exampleItem.designFeeEnding!=null}}'>
                                <view class='price texts'>{{exampleItem.designFeeStarting}}-{{exampleItem.designFeeEnding}}/m²</view>
                            </block>
                        </view>
                    </view>
                </view>
                <view class="sjsdm_pic" wx:if="{{exampleItem.lstResPic.length>0}}">
                  <swiper class="companyPic">
                    <swiper-item class="scroll-item" wx:for="{{exampleItem.lstResPic}}" wx:for-item="picItem" wx:key="{{index}}">
                      <view class="pic_item">
                        <image src="{{resourcePath}}{{picItem.picPath}}" data-imgpath="{{resourcePath}}{{picItem.picPath}}"></image>
                      </view>
                    </swiper-item>
                  </swiper>
                    <!-- <scroll-view scroll-x='true' style='heigth:320rpx'>
                      <view class='scroll-item'>
                        <view class="pic_item" wx:for="{{exampleItem.lstResPic}}" wx:for-item="picItem" wx:key="">
                          <image src="{{resourcePath}}{{picItem.picPath}}" data-imgpath="{{resourcePath}}{{picItem.picPath}}"></image>
                        </view>
                      </view>
                    </scroll-view> -->
                </view>
            </view>
        <view class='bottomView' wx:if="{{(exampleList.length>=10||!showNoMore)&&messTxt}}">
            <text>浏览已完毕</text>
        </view>
    </view>
        
    <view class='cityView' wx:if="{{showCityView}}">
        <view class='pull-left'>
            <view class='rows' wx:for="{{provinceObj}}" wx:key="{{idx}}" wx:for-index="idx">
                <view class='items {{choosex==idx&&choosey==idy?"active":""}}' 
                    wx:for="{{item.objList}}" 
                    wx:for-index="idy"
                    wx:key="{{idy}}" 
                    data-idy = '{{idy}}'
                    data-idx = '{{idx}}'
                    wx:for-item='it'
                    bindtap='changePro'
                >
                    <text>{{it.areaNamePinyin}}</text>
                    {{it.areaName}}
                </view>
            </view>
        </view>
        <view class='pull-right'>
            <view class='items {{index==choosep?"active":""}}' 
                wx:for="{{cityObj}}" 
                wx:key="index"
                data-idx="{{index}}"
                bindtap='submitFuc'
            >
                {{item.areaName}}
                <image wx:if="{{index==choosep}}" src='/static/image/choose.png'></image>
            </view>
        </view>
    </view>

    <view class='zzc' wx:if="{{showCityView||sortFlag||sortFlag2}}" bindtap='closeFun'></view>
    <view class='to-top' wx:if='{{ifShowToTopLogo&&exampleList.length>0}}' bindtap='goToTop'>
        <image src='/static/image/to_top.png'></image>
    </view>
</view>
