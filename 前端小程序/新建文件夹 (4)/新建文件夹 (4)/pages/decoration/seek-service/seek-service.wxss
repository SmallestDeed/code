page{
  background-color: #fff;
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 10;
  background-color: #fff;
}
/* 搜索框 */
.seek-box{
  position: relative;
  height: 58rpx;
  padding: 15rpx 30rpx;
  display: flex;
  justify-content: space-between;
}
.seekTxt{
  height: 58rpx;
  width: 73%;
  padding: 0  70rpx;
  background-color: #f5f5f5;
  border-radius: 28rpx;
  font-size: 28rpx;
  line-height: 58rpx;
  position: absolute;
  top: 15rpx;
  left: 30rpx;
}
.seek-box image{
  position: absolute;
  top: 30rpx;
  left: 57rpx;
  z-index: 3;
  width: 30rpx;
  height: 30rpx;
}
.seek-box-input{
  position: absolute;
  top: 15rpx;
  left: 30rpx;
  z-index: 2;
  width: 63%;
  height: 58rpx;
  background-color: #f5f5f5;
	border-radius: 28rpx;
  font-size: 28rpx;
  padding: 0 70rpx;
  color: #333333;
  transition: all 0.2s linear;
}
.seek-box-input-active{
  position: absolute;
  top: 15rpx;
  left: 30rpx;
  z-index: 2;
  width: 73%;
  background-color: #f5f5f5;
	border-radius: 28rpx;
  font-size: 28rpx;
  padding: 0 70rpx;
  color: #333333;
  transition: all 0.2s linear;
}
.seek-text{
  position: absolute;
  top: 17rpx;
  right: 30rpx;
  z-index: 1;
  font-size: 28rpx;
  color: #ff6419;
  line-height: 50rpx;
  opacity: 1;
  transition: all 0.2s linear;
}
.seek-text-active{
  position: absolute;
  top: 17rpx;
  right: 60rpx;
  z-index: 1;
  font-size: 28rpx;
  color: #ff6419;
  line-height: 50rpx;
  opacity: 0;
  transition: all 0.2s linear;
}
/* 筛选框 */
.seek-record-box{
  margin-top: 88rpx; 
}
.screen-box{
  height: 28rpx;
  padding: 30rpx 0;
  font-size: 28rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1rpx solid #f5f5f5;
}
.screen-item{
  line-height: 28rpx;
  width: 25%;
  display: flex;
  justify-content: center;
  color: #333333;
}
.screen-item-active{
  line-height: 28rpx;
  width: 25%;
  display: flex;
  justify-content: center;
  color: #ff6419;
}
.screen-item image, .screen-item-active image{
  width: 16rpx;
  height: 16rpx;
  margin: 8rpx 0 0 5rpx;
}
.screen-item .screen-icon, .screen-item-active .screen-icon{
  width:25rpx;
  height: 25rpx;
  margin: 2rpx 0 0 5rpx;
}
.area{
  height: 767rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
}
.left{
  width: 35%;
  background-color: #fff;
  overflow-y: auto;
}
.left-item{
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 30rpx; 
  font-size: 28rpx;
  color: #333333;
}
.left-item-active{
  height: 88rpx;
  line-height: 88rpx;
  padding-left: 30rpx; 
  font-size: 28rpx;
  color: #ff6419;
  background-color: #f5f5f5;
}
.right{
  width: 65%;
  background-color: #f5f5f5;
  overflow-y: auto;
}
.right-item{
  height: 88rpx;
  line-height: 88rpx;
  padding:0 50rpx; 
  font-size: 28rpx;
  color: #333333;
  display: flex;
  justify-content: space-between;
}
.right-item-active{
  height: 88rpx;
  line-height: 88rpx;
  padding:0 50rpx; 
  font-size: 28rpx;
  color: #ff6419;
  display: flex;
  justify-content: space-between;
}
.right-icon{
  width: 24rpx;
  height: 20rpx;
  margin-top: 34rpx;
}
.category{
  padding: 10rpx 0 0;
}
.category-title{
  font-size: 28rpx;
  color: #333333;
  padding: 30rpx 30rpx;
  font-weight: bold;
}
.category-box{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding: 0 20rpx;
}
.category-item{
  width: 216rpx;
	height: 80rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 80rpx;
  text-align: center;
  margin: 10rpx;
	background-color: #f5f5f5;
	border-radius: 5rpx;
}
.category-item-active{
   width: 216rpx;
	height: 80rpx;
  font-size: 28rpx;
  color: #ff6419;
  line-height: 80rpx;
  text-align: center;
  margin: 10rpx;
	background-color: #fff1eb;
	border-radius: 5rpx;
}
.category-btn{
  height: 80rpx;
  margin-top: 30rpx;
  font-size: 32rpx;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #f5f5f5; 
}
.reset-btn{
  width: 50%;
  color: #333333;
  line-height: 80rpx;
  text-align: center;
}
.confirm-btn{
  width: 50%;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  background-color: #ff6419;
}


/* 搜索记录盒子 */
.hot-box{
  padding: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}
.seek-record-title{
  font-size: 28rpx;
  color: #999999;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}
.seek-record-title image{
  width: 44rpx;
  height: 44rpx;
}
.record-list{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.record-item{
	padding: 16rpx 25rpx;
  margin: 10rpx;
  font-size: 26rpx;
  color: #333333;
	background-color: #f5f5f5;
	border-radius: 8rpx;
}
.history-box{
  padding: 30rpx;
}

/* 列表 */
.list{
  /* margin-top: 176rpx; */
  padding: 216rpx 40rpx 0;
}
.list-active{
  height: 100%;
  overflow: hidden;
}
.list-item{
  height: 210rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: space-between;
}
.list-item-image{
  width: 280rpx;
  height: 210rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
}
.message{
  width: 360rpx;
}
.title{
  position: relative;
  min-height: 35rpx;
  max-height: 90rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #403834;
  text-indent:42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.title-icon{
  position: absolute;
  top: 4rpx;
  left: 0;
  width: 32rpx;
  height: 32rpx;
}
.site{
  font-size: 24rpx;
  color: #999999;
  margin-top: 30rpx;
}
.data{
  display: flex;
  justify-content: flex-start;
  height: 25rpx;
  color: #999999;
  font-size: 24rpx;
  margin-top: 20rpx;
}
/* 筛选弹框 */
.filtrate{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 5;
  background: rgba(0, 0, 0, 0.5);
  width: 100%;
  height: 100%;
}
.filtrate-box{
  background-color: #fff;
  margin-top: 175rpx;
}
.sort-item{
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  border-bottom: 1rpx solid #f5f5f5;
}
.sort-item-active{
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ff6419;
  border-bottom: 1rpx solid #f5f5f5;
}
.empty{
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  text-align: center;
  color: #333;
  overflow: hidden;
}
.empty image{
  width: 100%;
  margin-top: 100rpx;
}
.empty view{
 color: #999;
}