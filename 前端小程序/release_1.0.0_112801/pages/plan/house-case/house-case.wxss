/* pages/house-case/house-case.wxss */
.house-case {
  padding-top:88rpx;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.navTop{
  width: 100%;
	height: 88rpx;
  position: fixed;
  top: 0;
  left: 0;
	background-color: #ffffff;
  padding-right: 80rpx;
  box-sizing: border-box;
  z-index: 33;
}
.navTop.showBot::after{
  content: '';
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  background: #e8e8e8;
  height: 2rpx;
  transform: scaleY(0.5);
  z-index: 36;
}
.navTop .showMore{
  position: absolute;
  width: 80rpx;
  height: 88rpx;
  right: 0;
  text-align: center;
  line-height: 88rpx;
  background: #fff;
  z-index: 35;
}
.navTop .showMore image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 19rpx;
  margin-left: 15rpx;
  display: block;
}

.navTop scroll-view{
  width: 100%;
  height: 88rpx;
  position: absolute;
  left: 0;
  z-index: 34;
  box-sizing: border-box;
  padding: 4rpx 0;
  padding-right: 80rpx;
  white-space: nowrap;
}
.navTop scroll-view .items{
  width: 21.3%;
  display: inline-block;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
  color: #000000;
  font-size: 28rpx;
}
.navTop scroll-view .items.active{
  color: #ff6419;
  font-weight: bold;
}
.navTop scroll-view .items.active::after{
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  margin-left: -15rpx;
  width: 30rpx;
	height: 4rpx;
	background-color: #ff6419;
	border-radius: 2px;
}

.top{
  height: 88rpx;
  width: 750rpx;
  background-color: #ffffff;
  position: fixed;
  top:0;
  left:0;
  border-bottom: 2rpx solid #ededed;
	color: #333333;
	font-size: 28rpx; 
  z-index:10;
}
.top .active {
	color: #ff6419;
}
.top image {
  width:16rpx;
  height:16rpx;
}
.room{
  height: 88rpx;
  width: 250rpx;
  text-align: center;
  line-height: 90rpx
}
.area{
  height: 90rpx;
  width: 250rpx;
   text-align: center;
  line-height: 90rpx
}
.style{
  height: 90rpx;
  width: 250rpx;
   text-align: center;
  line-height: 90rpx
}
.space{
  height: 90rpx
}


