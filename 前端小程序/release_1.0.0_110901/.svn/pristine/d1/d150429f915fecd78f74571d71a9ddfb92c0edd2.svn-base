   <import src="../../../component/emptyTemplate/emptyTemplate.wxml"/>
  <template is="emptyTemplate" data="{{ ...emptyTemplate }}"/> 
</view>

<view class='navTop {{!isShow?"showBot":""}}'>
  <scroll-view class="scroll-view_H" scroll-x scroll-left="{{scroolLeft}}" scroll-with-animation>
    <view class='items {{!getCaseParams.spaceType?"active":""}}'
      data-ty="" data-n="0" data-i="0" catchtap='cyhangeType'>
      全部
    </view>
    <view class='items {{getCaseParams.spaceType==item.houseType?"active":""}}' 
      wx:for='{{spaceList}}' 
      data-ty="{{item.houseType}}" 
      data-i="{{index}}"
      data-n="{{index+1}}"
      wx:key='{{index}}'
      catchtap='cyhangeType'>
      {{item.houseName}}
    </view>
  </scroll-view>
  <view class='showMore' catchtap='shouMoreFun'>
    <image src='/static/image/nav_icon_screen_02.png'></image>
  </view>
</view>
<!-- 筛选框 -->
<view class='conditions {{!isShow?"active":""}}'>
  <view class='showTitle' wx:if="{{getCaseParams.spaceType}}">面积</view>
  <view class='show-rows' wx:if="{{getCaseParams.spaceType}}">
    <view class='show-rows-items {{!areaId?"active":""}}' catchtap='areaIdFun'>
      全部
    </view>
    <view 
      class='show-rows-items {{areaId==item.areaId?"active":""}} {{(index + 2)%3==0?"unMr":""}}' 
      wx:for-index='index'
      catchtap='areaIdFun'
      data-info="{{item.areaId}}"
      wx:key='{{index}}'
      wx:for='{{areaList}}'>
      {{item.areaName}}m²
    </view>
  </view>
  <view class='showTitle' wx:if="{{getCaseParams.spaceType}}">风格</view>
  <view class='show-rows' wx:if="{{getCaseParams.spaceType}}">
    <view class='show-rows-items {{!styleCode?"active":""}}' catchtap='styleCodeFun'>全部</view>
    <view 
      class='show-rows-items {{styleCode==item.styleCode?"active":""}} {{index==1?"unMr":""}} {{(index - 1)%3==0?"unMr":""}}' 
      catchtap='styleCodeFun'
      wx:for-index='index'
      data-info='{{item.styleCode}}'
      wx:key='{{index}}'
      wx:for='{{styleList}}'>
      {{item.styleName}}
    </view>
  </view>
  <view class='showTitle'>装修方式</view>
  <view class='show-rows'>
    <view 
      class='show-rows-items {{fitmentWayActive == index?"active":""}}' 
      wx:for-index='index'
      wx:key='{{index}}'
      data-value='{{item.value}}'
      data-index='{{index}}'
      data-type='parent'
      catchtap='switchFitmentWay'
      wx:for='{{fitmentWayList}}'>
      {{item.name}}
    </view>
  </view>
  <view class='showTitle'>装修价格 <text>元/平方</text></view>
  <view class='show-rows'>
    <view 
      class='show-rows-items {{fitmentWayChildActive == index?"active":""}}' 
      wx:for-index='index'
      wx:key='{{index}}'
      data-type='child'
      data-value='{{item.value}}'
      data-index='{{index}}'
      catchtap='switchFitmentWay'
      wx:for='{{fitmentWayList[fitmentWayActive].sonList}}'>
      {{item.name}}
    </view>
  </view>
</view>
<!-- 筛选框操作按钮 -->
<view class='btnRows' wx:if="{{!isShow}}">
  <view class='resets' catchtap='resetFun'>重置</view>
  <view class='submits' catchtap='submitFun'>确认</view>
</view>