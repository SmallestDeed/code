<view class='comment-list'>
  <view class='{{item.isRead == 1?"comment-item-active":"comment-item"}}' 
      wx:if="{{commentList&&commentList.length > 0}}"
      wx:for='{{commentList}}' 
      wx:key='{{index}}' 
      data-item='{{item}}'
      data-index='{{index}}'
      bindtap='goSupplyDetail'>
    <view class='comment-info'>
      <view class='info-header'>
        <image src='{{staticImageUrl+"header.png"}}' class='header-img'></image>
        <view class='header-data'>
          <view class='name ellipsis'>{{item.nickName}}</view>
          <view class='time'>{{item.gmtCreate}}</view>
        </view>
      </view>
      <view class='message'>{{item.reviewsMsg}}</view>
    </view>
    <image src='{{item.coverPicPath?resourcePath+item.coverPicPath:staticImageUrl+"goods_pic_no.png"}}' class='comment-img'></image>
  </view>
  <!-- <empty-page emptyPageObj="{{emptyPageObj}}" wx:else></empty-page> -->
</view>
