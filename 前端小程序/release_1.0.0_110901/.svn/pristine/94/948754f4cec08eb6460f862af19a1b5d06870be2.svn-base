// pages/mine/my-favorite-news/my-favorite-news.js
let API = getApp().API
let $App = getApp()
Page({

  /**
   * 页面的初始数据
   */
  data: {
    staticImageUrl: getApp().staticImageUrl,
    resourcePath: getApp().resourcePath,
    navList: [{ name: '需求' }, { name: '供应' }],
    navIconIndex: 1,
    limit: 10,
    totalCount: 0,
    newsList: []
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    this.getInvitationList();
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /*处理发布时间*/
  changeTiem(tiem) {
    let leadTime = new Date().getTime() - new Date(tiem.replace(/\-/g, '/')), date;
    if (leadTime / 1000 / 60 < 1) {
      date = '刚刚';
    }
    if (leadTime / 1000 / 60 > 1 && leadTime / 1000 / 60 < 60) {
      date = (leadTime / 1000 / 60).toFixed(0) + '分钟前';
    }
    if (leadTime / 1000 / 3600 > 1 && leadTime / 1000 / 3600 < 59) {
      date = (leadTime / 1000 / 3600).toFixed(0) + '小时前';
    }
    if (leadTime / 1000 / 3600 / 24 > 1) {
      date = (leadTime / 1000 / 3600 / 24).toFixed(0) + '天前';
    }
    return date;
  },

  /*请求帖子列表*/
  getInvitationList() {
    API.collectInvitationList({
      start: 0,
      limit: this.data.limit,
      fromFavorite: 1,
      type: this.data.navIconIndex
    }).then(res => {
      if (res.obj) {
        let arr = res.obj;
        arr.forEach((value, index) => {
          value.gmtModified = this.changeTiem(value.gmtModified);
        })
        this.setData({
          newsList: arr,
          totalCount: res.totalCount
        });
      } else {
        this.setData({
          emptyPageObj: {
            imgUrl: '/static/image/undefined.png',
            title: '您没有收藏帖子哦',
            // btnText: '去逛一逛',
            // url: '/pages/brandHall/bHIndex/bHIndex',
            // switchTab: true
          }
        });
      }
    });
  },

  /*切换导航*/
  switchover(e) {
    this.setData({
      navIconIndex: e.currentTarget.dataset.index + 1,
      limit: 10
    });
    this.getInvitationList();
  },

  /*跳转详情页面*/
  goSupplyDetail(e) {
    let id = e.currentTarget.dataset.item.supplyDemandId;
    wx.navigateTo({
      url: '/pages/decoration/supplyDetail/supplyDetail?id=' + id,
    })
  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {
    if (this.data.totalCount > this.data.limit) {
      this.data.limit += 10;
      this.getInvitationList();
    }
  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})