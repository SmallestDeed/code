<view class='comment-list'>
  <view class='{{item.isBrowse?"comment-item-active":"comment-item"}}' 
      wx:for='{{commentList}}' 
      wx:key='{{index}}' 
      data-item='{{item}}'
      bindtap='goSupplyDetail'>
    <view class='comment-info'>
      <view class='info-header'>
        <image src='{{staticImageUrl}}header.png' class='header-img'></image>
        <view class='header-data'>
          <view class='name'>{{item.name}}</view>
          <view class='time'>{{item.time}}</view>
        </view>
      </view>
      <view class='message'>{{item.message}}</view>
    </view>
    <image src='{{staticImageUrl}}goods_pic_no.png' class='comment-img'></image>
  </view>
</view>
