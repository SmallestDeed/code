page{
  background-color: #fff;
}
.publish-message{
  overflow: hidden;
}
.message-form{
  padding: 0 30rpx;
  border-top: 20rpx solid #f6f6f6;
  border-bottom: 20rpx solid #f6f6f6;
}
.title{
  width: 100%;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}
.placeholder-class{
  font-weight: none;
}
.text{
  width: 100%;
  min-height: 233rpx;
  margin-top: 33rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
  color: #333333;
  z-index: 100;
}
.add-message{
  padding: 40rpx 0 120rpx;
  background-color: #fff;
}
.add-btn-box{
  height: 108rpx; 
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}
.add-btn{
  width: 216rpx;
	height: 108rpx;
	border-radius: 4rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 108rpx;
  color: #ffffff;
}
.img{
  background-color: #92c7fc;
	box-shadow: 0rpx 10rpx 20rpx 0rpx rgba(146, 199, 252, 0.4);
}
.project{
  background-color: #fcc860;
	box-shadow: 0rpx 10rpx 20rpx 0rpx rgba(252, 200, 96, 0.4);
}
.house{
  background-color: #7ee6c7;
	box-shadow: 0rpx 10rpx 20rpx 0rpx	rgba(126, 230, 199, 0.4);
}
.scroll-box{
  height: 460rpx;
  overflow: visible;
}
.scroll{
  height: 460rpx;
  white-space: nowrap; 
  overflow: visible;
}
.scroll-item{
  position: relative;
  height: 400rpx;
  margin-left: 30rpx;
  padding: 30rpx 0;
  display: inline-block;
  font-size: 0;
}
.item-img{
  display: block;
  width: 400rpx;
  height: 400rpx;
  border-radius: 6px;
}
.delete{
  position: absolute;
  top: 17rpx;
  right: -13rpx;
  width: 42rpx;
	height: 42rpx;
}
.icon{
  position: absolute;
  top: 50rpx;
  left: 20rpx;
  width: 56rpx;
	height: 32rpx;
  line-height: 30rpx;
  font-size: 20rpx;
	border-radius: 4rpx;
  text-align: center;
  color: #ffffff;
}
.btn-box{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 10000000000;
  width: 100%;
	height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
  color: #ffffff;
  background-color: #fff;
}
.btn{
  width: 690rpx;
  height: 80rpx;
  margin: 0 auto;
  border-radius: 40rpx;
	background-color: #29cccc;
  text-align: center;
}