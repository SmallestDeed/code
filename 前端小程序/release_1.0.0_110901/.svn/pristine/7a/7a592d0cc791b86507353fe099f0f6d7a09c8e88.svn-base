  <!-- 户型列表 -->
  <block wx:if="{{type=='myHouse'}}">
    <view class="list" wx:if="{{useList.length>0}}">
      <view class="list-item" wx:for="{{useList}}" wx:key='{{index}}' data-key='{{index}}'>
        <view class="item-img">
          <image class='checkBtn' src='{{staticImage+(isCheck==index?"choose_icon_sct.png":"choose_icon_nor.png")}}' catchtap='switchCheck' data-index="{{index}}"></image>
          <image catchtap='examineImg' data-index="{{index}}" src="{{item.thumbnailPath? resourcePath + item.thumbnailPath : '/static/image/design_def.png'}}"></image>
        </view>
        <view class="bottom-box">
          <view class="left">
            <view class="name ellipsis fl">{{item.houseCommonCode}}</view>
            <view class="date ellipsis fr">{{item.houseTypeStr}} {{item.totalArea}}</view>
          </view>
        </view>
      </view>
    </view>
  </block>
  <!-- 收藏户型列表 -->
  <block wx:if="{{type=='collectHouse'}}">
    <view class="listTop" wx:if="{{useList.length>0}}">
      <view class="list-item" wx:for="{{useList}}" wx:key='{{index}}' bindtap='cancelFlag' data-key='{{index}}'>
        <view class="item-img">
          <image class='checkBtn' src='{{staticImage+(isCheck==index?"choose_icon_sct.png":"choose_icon_nor.png")}}' catchtap='switchCheck' data-index="{{index}}"></image>
          <image catchtap='examineImg' data-index="{{index}}" src="{{item.thumbnailPath? resourcePath + item.thumbnailPath : '/static/image/design_def.png'}}"></image>
        </view>
        <view class="bottom-box">
          <view class="left">
            <view class="name ellipsis fl">{{item.houseName}}</view>
            <view class="date ellipsis fr">{{item.houseTypeStr}} {{item.totalArea}}㎡</view>
          </view>
        </view>
      </view>
    </view>
  </block>

  <!-- 确定按钮 -->
  <view class='confirm' wx:if="{{useList.length>0}}">
    <button class='confirmBtn' bindtap='confirmBtn'>确定</button>
  </view>
</view>
<empty-page emptyPageObj="{{emptyPageObj}}" wx:if="{{!useList.length>0}}"></empty-page>
