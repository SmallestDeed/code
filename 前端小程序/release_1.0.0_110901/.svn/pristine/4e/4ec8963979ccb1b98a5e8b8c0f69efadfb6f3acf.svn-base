.comment-list{
  padding: 30rpx;
}
.comment-item{
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  background-color: #fff;
}
.comment-item-active{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  background-color: #f6f6f6;
  border-radius: 10rpx;
}
.comment-info{
  width: 446rpx;
}
.info-header{
  height: 68rpx;
  display: flex;
  justify-content: flex-start;
}
.header-img{
  width: 68rpx;
  height: 68rpx;
}
.header-data{
  padding: 6rpx 0 6rpx 20rpx;
}
.name{
  height: 26rpx;
  line-height: 26rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.time{
  height: 16rpx;
  line-height: 16rpx;
  margin-top: 14rpx;
  font-size: 20rpx;
  color: #999999;
}
.message{
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333333;
}
.comment-img{
  width: 140rpx;
	height: 140rpx;
  border-radius: 10rpx;
}