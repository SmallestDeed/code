      <view class="am-dropdown {{isShowCitys?'am-active':''}}" bindtap="toggleCitys">
        <view class="am-dropdown-toggle" data-am-dropdown-toggle>{{cityItem.areaName||"全部"}}
          <image src='/static/image/selD.png'></image>
        </view>
      </view>
    </view> -->
    <view class='newsView' wx:if="{{!showNews}}" data-url="/pages/my-news/my-news" bindtap='navigat'>
      <image src='/static/image/home-news.png'></image>
      <view wx:if='{{systemNewObj.isRead == 0 || unreadMsg == 1 || renderMessageIsRead === 1}}' class='render-logo-hint'></view>
    </view>
  </view>
  <swiper circular class='swiper-box' indicator-dots="{{imageArray.length>1}}" autoplay="true" duration="1000">
    <swiper-item class="scroll-view-item swiper-cover" wx:for="{{imageArray}}" wx:key="{{index}}">
      <image class='bgImg' src='{{item.picPath }}' data-url='{{item.skipPath}}' data-type='{{item.type}}' bindtap='navigat'></image>
    </swiper-item>
