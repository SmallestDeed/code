.bck {
    width: 100%;
    box-sizing: border-box;
    padding:40rpx 30rpx 0;
}
.bck .cases {
    width: 100%;
    font-size: 0;
    box-shadow: 0 0 40rpx 0 
		rgba(204, 204, 204, 0.4);
	border-radius: 6rpx;
    margin-bottom: 40rpx;
    overflow: hidden;
}
.bck .img {
    width: 100%;
    height: 388rpx;
}

.bck .content {
    width: 690rpx;
    height: 98rpx;
    line-height: 98rpx;
    font-size: 32rpx;
	color: #333333;
    padding: 0 30rpx;
    box-sizing: border-box;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}