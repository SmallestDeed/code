<view class='bck' wx:if="{{caseList.length>0}}">
    <view class='cases' wx:for='{{caseList}}' wx:key="{{index}}" bindtap='toWorkCase' data-id='{{item.caseId}}'>
        <image src='{{item.picPath?(resourcePath+item.picPath):(staticImageUrl+"wei_pc_nor.jpg")}}' class='img' mode='aspectFill'></image>
        <view class='content'>{{item.caseTitle}}</view>
    </view>
</view>