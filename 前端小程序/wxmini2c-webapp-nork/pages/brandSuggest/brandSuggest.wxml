<!--pages/brandSuggest/brandSuggest.wxml-->
<import src="../../utils/wxParse/wxParse.wxml"/>
<view class='brand'>
  <image class='brandImg' src='{{resourcePath+brandInfo.picPath}}'></image>
  <view class='brandTxt'>
    <view class='txtTitle'>{{brandInfo.introduceTitle}}</view>
    <view class='txt'>{{brandInfo.introduce}}</view>
    
  </view>
  <view class='rich' wx:if='{{brandInfo.richContext}}'>
      <template is="wxParse" data="{{wxParseData:article.nodes}}"/>
    </view>
</view>

