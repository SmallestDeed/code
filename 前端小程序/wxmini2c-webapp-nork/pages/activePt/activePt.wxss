/* pages/activeKj/activeKj.wxss */
page{
  background-color: #fff;
}
.activeItem{
  height: 280rpx;
  width: 690rpx;
  border-radius: 15rpx;
  background-color: #fff;
  margin-top: 30rpx;
  margin-left: 30rpx;
  display: flex;
  box-shadow: 0px 10rpx 60rpx rgba(153, 153, 153, 0.3);
}

.leftImg{
  height: 280rpx;
  width: 280rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.info{
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
}
.name{
  font-size: 28rpx;
  font-weight: 600;
  margin-top: 25rpx;
}
.title{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #9b9b9b;
}
.time{
  margin-top: 20rpx;
  font-size: 30rpx;
}
.price{
  display: flex;
  margin-top: 15rpx;
}
.pri{
  color: #ff6419;
  font-size: 32rpx;
  font-weight: 600
}
.btn{
  width: 180rpx;
	height: 60rpx;
  background: linear-gradient(to right, #ffb366 , #ff6419); /* 标准的语法 */
  border-radius: 28rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  margin-top: 20rpx;
  box-shadow: 0px 10rpx 30rpx rgba(255, 100, 25, 0.2);
  font-weight: 600;
}
.pepole{
  background-color: #fff1eb;
  color: #ff6419;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  margin-left: 15rpx;
  padding: 0 8rpx
}
.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  margin-top:-100rpx;
  top:0;

}
.empty_tip .image{
  width: 403rpx;
	height: 270rpx;
}
.empty_tip .txt{
  font-size: 28rpx;
  color: #999999;
  margin-top:40rpx;
}