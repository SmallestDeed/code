<view class='navTop'>
  <view class='{{spaceFlag?"checkOption2":"checkOption"}}' bindtap='spacePick'>
    {{spaceNameNow}}
     <image class='checkIcon' src='{{spaceFlag?staticImageUrl+"choose_icon_up@2x.png":staticImageUrl+"choose_icon_down@2x.png"}}'></image> 
  </view>   
  <view class='{{styleFlag?"checkOption2":"checkOption"}}' bindtap='stylePick'>
    {{styleNameNow}}
