</view>
<view class='itemList' wx:if='{{styleFlag}}'>
  <view class='{{styleNameNow==item.styleName?"items2":"items"}}' wx:for='{{styleList}}' 
                      bindtap='pickStyle' 
                      data-info='{{item.styleCode}}' 
                      data-name='{{item.styleName}}'>{{item.styleName}}</view>
</view>
<view class='itemList' wx:if='{{spaceFlag}}'>
  <view class='{{spaceNameNow==item.houseName?"items2":"items"}}' wx:for='{{spaceList}}' 
                      bindtap='pickSpace' 
                      data-info='{{item.houseType}}' 
                      data-name='{{item.houseName}}' data-index='{{index}}'>{{item.houseName}}</view>
</view>
