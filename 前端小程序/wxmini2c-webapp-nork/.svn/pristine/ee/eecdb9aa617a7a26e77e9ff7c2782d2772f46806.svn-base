page {
    display: block;
    min-height: 100%;
    background-color: #f5f5f5;
}

.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    width: 100%;
}

.flex-iteam {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}

.head-portrait {
    width: 100%;
    height: 240rpx;
    background-color: #ffffff;
    overflow: hidden;
    display: flex;
    flex-direction: row;
}


.head-iteam.image{
	margin-top: 30rpx;
  margin-left: 40rpx;
	width: 148rpx;
	height: 148rpx;
	border-radius: 100%;
}
.head-information{
  height: 148rpx;
  width: 502rpx;
  margin-left: 30rpx;
  margin-top:30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.head-iteam.name{
	font-size: 40rpx;
	line-height: 1;
	color: #333333;
  font-weight: bold;
  margin-bottom: 30rpx;
}
.head-iteam.points{
	font-size: 40rpx;
	color: #ff6419;
}
.head-iteam.points text{
	font-size: 26rpx;
	color: #999999;
  margin-right: 20rpx;
}
.head-iteam.points image{
	position: relative;
	height: 28rpx;
	width: 28rpx;
	margin-left: 2rpx;
	vertical-align: -3rpx;
}
.head-iteam.image .headimg{
	width: 148rpx;
	height: 148rpx;
	border-radius: 100%;
}

.person-nav {
    width: 100%;
    margin: 20rpx 0;
    background-color: #ffffff;
}
.person-nav-top {
  width: 100%;
  display: flex;
  flex-direction: row;
}

.preson-nav-iteam {
    text-align: center;
    margin-top:30rpx;
    margin-bottom: 30rpx;
}
.preson-nav-image{
  height: 140rpx;
  width: 690rpx;
  margin-left: 30rpx;
  margin-top:40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0rpx 8rpx 16rpx 0rpx 
		rgba(255, 194, 75, 0.4);
	border-radius: 10rpx;
}

.list-cells {
    position: relative;
    margin-top: 20rpx;
    background-color: #fff;
    line-height: 1.41176471;
    font-size: 17rpx;
}

.list-cells.first,.list-cell.about {
	border: none;
}
.list-cell{
	width: 720rpx;
	margin-left:30rpx;
	height: 108rpx;
    border-bottom: 1rpx solid #e8e8e8;

}
.list-cell__bd,.list-cell__ft{
	height: 108rpx;
	line-height: 108rpx;

}
.list-cell__bd{
	float: left;
	font-size: 28rpx;
	color: #333333;
  display: flex;
  align-items: center;
}
.lise-cell_txt{
  margin-left: 20rpx;
}
.list-cell__ft{
	margin-right:30rpx;
	float: right;
	font-size: 24rpx;
	color: #999999;
}
.lise-cell_icon{
  height: 40rpx;
  width: 38rpx;
  
}
.preson-nav-iteam{
	font-size: 24rpx;
	color: #333333;
	text-align: center;
}
.preson-nav-iteam .img{
	margin:0 auto;
text-align:center;
margin-bottom:20rpx;
width:56rpx;
height:56rpx;
overflow:hidden;


}
.preson-nav-iteam .img image{
	vertical-align: middle;
	width: 56rpx;
	height: 56rpx;
	margin:0 auto;
}
.list-cell.first{
	border: none;
}
.list-cell__ft image{
	width: 15rpx;
	height: 28rpx;
	vertical-align:-3rpx;
}
/* 绑定手机号样式 */
.bindingphone{
  box-sizing: border-box;
  width: 100%;
  height:80rpx;
  background-color: #ffeee5;
  overflow: hidden;
}
.bindingphone .phone-text{
  color:#ff6419;
  font-size: 24rpx;
  line-height: 80rpx;
  margin-left: 71rpx;
  margin-right: 20rpx;  
}
.bindingphone .phone-btn{
  width: 130rpx;
  height: 48rpx;
  color: #fff;
  border-radius: 24rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  margin-top: 16rpx;
  background-color: #ff6419;
}



