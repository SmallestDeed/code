//logs.js
const util = require('../../utils/util.js')
let fetch = getApp().fetch
let $App = getApp()
Page({
  data: {
    logs: [],
    score:'',
    scoreDetail:[],
    isMember: false, // 是否包年包月
    residueDay: 0 // 剩余天数
  },
  onLoad: function () {
    new $App.quickNavigation() // 注册组件
    var that=this
    this.setData({
      logs: (wx.getStorageSync('logs') || []).map(log => {
        return util.formatTime(new Date(log))
      })
    })
    that.getScore();
    that.getScoreDetail();
  },
  onShow: function () {
    this.getuserIsPackageInMonthly() // 套餐
  },
  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function (res) {
    if (res.from === 'menu') {
      return $App.shareAppMessageFn(true);
    }
  },
  getScore:function(){
    var that = this
    var url = "/web/system/sysUser/getUserBalance"
    fetch(url, 'GET', '','pay')
      .then((res) => {
        if (res.status){
          that.setData({
            score: res.obj.balanceIntegral
          })
        }else{
          wx.showToast({
            title: '获取度币信息失败',
            icon: 'none',
            duration: 3000
          })
        }
      })
  },
  getScoreDetail:function(){
    var that = this
    var url = "/web/pay/payOrder/findExpenseRecordList"
    fetch(url, 'GET','','pay')
      .then((res) => {
        console.log(res)
        if (res.success){
          that.setData({
            scoreDetail: res.obj
          })
        }else{
          wx.showToast({
            title: '获取度币信息失败',
            icon: 'none',
            duration: 3000
          })
        }
        

      })
  },
  toBuy:function(){
    var that=this
    wx.navigateTo({
      url: '/pages/buy-points/buy-points?score='+that.data.score,
    })
  },
  routerToDredgeCombo() {
    wx.navigateTo({
      url: '/pages/dredge-combo/dredge-combo',
    })
  },
  getuserIsPackageInMonthly() { // 获取用户包年包月信息
    let url = `/web/pay/checkRenderGroopRef2C` 
    fetch(url, 'get', {}, 'pay')
    .then((res) => {
      console.log(res, 'res')
      if (res.success) {
        if (res.obj.state === '0') {
          this.setData({
            isMember: false,
            residueDay: 0
          })
        } else if (res.obj.state === '2' || res.obj.state === '3') {
          this.setData({
            isMember: true,
            residueDay: res.obj.leftTime
          })
        }
      }
    })
    .catch((err) => {
      console.log(err, 'err')
    })
  }
})
