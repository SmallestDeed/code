<wxs module="public" src="../../utils/public.wxs"></wxs>
<view class='story'>
    <view class='title'>
        <view class='left'>
            <view class='lineicon'></view>
            <view class='titletxt'>品牌故事</view>
        </view>
        <!--<view class='right'>
      <image class='icon' src='./image/list_icon_more.png'></image>
      <view class='more'>查看更多</view>   
    </view>-->
    </view>
    <swiper style='{{imgUrls.length<=0?"height:0":""}}' circular indicator-active-color="#ff6419" indicator-dots autoplay="true" duration="1000">
        <swiper-item wx:for="{{imgUrls}}" wx:key="item">
            <view class='index-banner' bindtap='goWeiGuang' data-num='{{index}}'>
                <image src='{{resourcePath+item}}'></image>
            </view>
        </swiper-item>
    </swiper>

</view>
<view class='shop'>
    <view class='title'>
        <view class='lineicon'></view>
        <view class='titletxt'>线下体验店 </view>
    </view>

    <view class='serch'>
        <view class='city' bindtap='changeCtiy'>
            <view class='cityname'>{{city}}</view>
            <image src='{{triangleicon}}'></image>
        </view>
        <view class='searchItem' bindtap='toSearch'>
            <image src='{{searchicon}}' />
            <input placeholder-class="placeholder" placeholder='搜索体验店' disabled='true'></input>
        </view>
    </view>
    <view class='detail' 
        catchtap='todetail'  
        data-id='{{item.id}}' 
        wx:key="item" 
        wx:for='{{shopList}}' 
        data-city='{{item.cityName}}'
        data-name="{{item.shopName}}"
        data-longitude='{{item.longitude}}'
        data-latitude='{{item.latitude}}'
        data-distance="{{item.distance}}"
    >
        <image class='image' src='{{item.logoUrl}}' mode='aspectFill' binderror="errorFunction" data-img="shopList[{{index}}].logoUrl"></image>
        <view class='tag'>
            <image class='tagimg' src='./image/wei_msg_label.png'></image>
            <view class='tagtxt'>精选</view>
        </view>
        <view class='information'>
            <view class='name'>{{item.shopName}}</view>
            <view class='address'>{{item.provinceName+item.cityName+item.areaName+item.shopAddress}}</view>
            <text wx:if="{{item.distance}}" 
                class='distance' 
                catchtap='goLocation' 
                data-latitude='{{item.latitude}}'
                data-name="{{item.shopName}}"
                data-address="{{item.provinceName+item.cityName+item.areaName+item.shopAddress}}"
                data-longitude='{{item.longitude}}'
            > {{public.toFix(item.distance,1)}}km</text>
            <!--<view class='howfar'></view>-->
        </view>
    </view>
</view>
<block wx:if="{{shopList.length==0}}">
    <view class='noShop'>
        <image class='noShopimg' src='./image/wei_icon_empty.png'></image>
        <view class='noShoptxt'>暂无门店信息</view>
    </view>
</block>
