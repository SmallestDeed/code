<view class='main'>
  <view 
    class='items' wx:for="{{goodsList}}" 
    wx:key="{{index}}" data-id="{{item.goodsId}}"
    bindtap='goGoodsInfo'
  >
    <image src='{{item.picPath?resourcePath+item.picPath:"../static/image/goods_pic_no.png"}}'></image>
    <view class='name'>{{item.spuName}}</view>
    <view class='price'>{{item.price!=0?"￥"+item.price:"暂无定价"}}</view>    
  </view>
</view>
