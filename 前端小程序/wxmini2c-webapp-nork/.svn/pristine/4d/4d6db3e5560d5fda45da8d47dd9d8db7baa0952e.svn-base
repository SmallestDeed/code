.nav{
  padding: 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
  border-top: 1rpx solid #e8e8e8;
  display: flex;
  justify-content: flex-start;
}
.nav .color{
  color: #ff6419;
  border: solid 1px #ff6419;
}
.nav text{
  width: 190rpx;
	height: 56rpx;
	border: solid 1rpx #999999;
  font-size: 28rpx;
  color: #999999;
  border-radius: 10rpx;
  margin-right: 20rpx;
  text-align: center;
  line-height: 56rpx;
}
.evaluation-list{
  padding: 0 30rpx;
}
.evaluation-message{
  display: flex;
  justify-content: flex-start;
}
.evaluation-item{
  padding: 40rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}
.evaluation-message image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.right-box{
  height: 60rpx;
  margin-left: 10rpx;
}
.evaluation-name{
  margin-top: 3rpx;
  font-size: 24rpx;
  color: #333333;
}
.evaluation-date{
  font-size: 20rpx;
  color: #999999;
}
.evaluation-content{
  margin: 30rpx 0 10rpx;
  font-size: 28rpx;
  color: #333333;
}
.evaluation-img-box{
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.evaluation-img-box .evaluation-img{
  margin-right: 0;
}
.evaluation-img-box image{
  width: 156rpx;
	height: 156rpx;
  margin: 20rpx 20rpx 0 0;
  border-radius: 10rpx;
}