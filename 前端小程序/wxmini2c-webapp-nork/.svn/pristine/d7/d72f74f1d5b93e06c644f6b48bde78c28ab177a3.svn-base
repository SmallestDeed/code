
 <view class="photoDialog" hidden="{{!isShow}}">
    <view class="dialogWrap" hidden="{{!isShow}}"></view>
    <view class="photoWrap">
        <view class="photoBox">
            <view class='close-box'><image class="close" bindtap="close" src="{{staticImageUrl}}pop_nav_icon_close_02.png"/></view>
            <view class="personInfo">
                <image class="Img" src='{{shareParam.userImg}}'/>
                <text class="name">{{shareParam.userName}}</text>邀请您参团
            </view>
            <view class="Imgbox">
                <image class="shopImg"  src='{{shareParam.goodsImg}}'/>
            </view>
            <view class="infoBox">
                <view class="title">
                      {{shareParam.goodsName}}
                </view>
                <view class="money">
                    ￥{{shareParam.goodsPrice}}<view class="tab">{{shareParam.assembleNum}}人拼团价</view>
                </view>
                <view class="costPrice">
                    原价￥{{shareParam.basePrice}}
                </view>
            </view>
            <view class="codeBox">
                <image class="twoCode" src='{{shareParam.code}}'/>
                <view class="codeText">
                    扫描或长按小程序码
                </view>
            </view> 
        </view>
        <view class="saveBtn" catchtap='saveImg'>
            保存图片
        </view>
    </view>
     <canvas canvas-id="myCanvas"></canvas> 
</view>