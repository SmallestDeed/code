/* pages/goods-list/goods-list.wxss */
/* 头部样式 */
page{height:100%}
.goods-list {
  padding-top: 90rpx;
  box-sizing: border-box;
}
.good-list-header{
  width:100%;
  height:88rpx;
  padding:0 32rpx;
  border-bottom: solid 1px #e8e8e8;
  z-index:10;
  position:fixed;
  left: 0;
  top:0;
  box-sizing: border-box;
  background-color:#fff;
}
.good-list-header .header-left {
  height:88rpx;
  font-size:30rpx;
  line-height:88rpx;
}
.good-list-header .header-right {
  height:88rpx;
  font-size:30rpx;
  line-height:88rpx;
}
.good-list-header .header-right .right-img image{
  width:30rpx;
  height:30rpx;
  margin-left:11rpx;
  vertical-align:middle;
}

/* 内容样式 */
.good-list-content {
  margin-top:19rpx;
}
.good-list-content .content-item {
  width: 345rpx;
  height:439rpx;
  margin-left:20rpx;
  margin-bottom:49rpx;
}
.good-list-content .content-item .image-box{
  width:345rpx;
  height:345rpx;  
  position: relative;
}
.good-list-content .content-item .image-box image{
  border-radius:6rpx;
  background: #e8e8e8;
}
 image {
  width:100%;
  height:100%;
}
.good-list-content .content-item .text-box {
   margin-top:21rpx;
  height:73rpx;
}
.content-item .text-box .name {
  font-size:28rpx;
  color:#666666;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.content-item .text-box .price {
  font-size:30rpx;
  color:#ff6419;
  margin-top:10rpx;

}
/* 帅选条件样式 */
.good-list-screen {
  position:fixed;
  left:0rpx;
  top:92rpx;
  width:750rpx;
  height:100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 10;
  overflow-y: auto;
  min-height: 1200rpx;
}
.good-list-screen .list-screen-box{
  padding-left:29rpx; 
  background-color:white;
  overflow-y: auto;
  min-height: 1200rpx;
}
.good-list-screen .list-screen-box .item-first {
  padding-top:25rpx;
  line-height: 44rpx;
  color:#666666;
  font-size: 28rpx;
  width: 690rpx;
}
.good-list-screen .list-screen-box .item-first .txt{
  color: #999999;
}
.good-list-screen .list-screen-box .item-first .txt2{
  color: #ff6419;
}
.good-list-screen .list-screen-box .item-first .right{
  display: flex;
  flex-direction: row;
}
.good-list-screen .list-screen-box .item-first image{
  width: 14rpx;
  height: 8rpx;
  margin-top:20rpx;
margin-left:10rpx;

}
.good-list-screen .list-screen-box .item-second {
  width:216rpx;
  height: 80rpx;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  margin:20rpx 21rpx 0 0;
	background-color: #f5f5f5;
	border-radius: 5px;
  color: #333;
}
.good-list-screen .list-screen-box .item-second-active {
  background-color: #fff1eb;
  color:#ff6419;
  
}
.good-list-screen .reset-comfirm {
  height:88rpx;
  font-size: 32rpx;
  line-height: 88rpx;
  position: fixed;
  bottom:0;
  left:0;
}
.good-list-screen .reset-comfirm .reset-btn{
  width:250rpx;
  height:88rpx;
  text-align: center;
  color:#333;
  float:left;
  background-color:#ffffff;
  box-sizing: border-box;
  border-top:solid 1rpx #e8e8e8;
}
.good-list-screen .reset-comfirm .comfirm-btn{
  width:500rpx;
  height:88rpx;
  text-align: center;
  color:#fffefe;
  float:left;
  background-color: #ff6419;  
}
.list-screen-box .screen-item{
  margin-bottom: 35rpx;
}


.list-screen-box .screen-item .clearfix{
  height: 100rpx;
  overflow: hidden;
  width: 100%;
display:flex;
flex-direction:row;
flex-wrap:wrap;

}

.list-screen-box .screen-item .clearfixall{
  height: auto;
  width: 100%;
 display:flex;
flex-direction:row;
flex-wrap:wrap;

}
.space{
  width: 100%;
  height: 200rpx;
  background-color: #ffffff;
}
