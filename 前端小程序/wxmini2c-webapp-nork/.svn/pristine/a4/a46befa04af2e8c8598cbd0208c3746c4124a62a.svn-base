/* pages/allshop/allshop.wxss */

.placeholder {
    color: #999;
    font-size: 24rpx;
}

.serch {
    display: flex;
    flex-direction: row;
    height: 90rpx;
    align-items: center;
}

.searchItem {
    display: flex;
    width: 480rpx;
    background: #f4f4f4;
    flex-direction: row;
    border-radius: 29rpx;
    margin-right: 30rpx;
    height: 58rpx;
}

.searchItem image {
    height: 30rpx;
    width: 30rpx;
    align-self: center;
    margin-left: 30rpx;
    margin-right: 15rpx;
}

.searchItem input {
    flex: 1;
    font-size: 30rpx;
    height: 58rpx;
}

.searchtxt {
    font-size: 28rpx;
    color: #ff6419;
    line-height: 90rpx;
}

.shop {
    width: 690rpx;
    margin-left: 30rpx;
    margin-top: 40rpx;
}

.shop .title {
    display: flex;
    flex-direction: row;
    height: 30rpx;
    line-height: 30rpx;
    margin-bottom: 30rpx;
}

.shop .title .lineicon {
    width: 4rpx;
    height: 24rpx;
    background-color: #ff6419;
    border-radius: 2px;
    margin-top: 3rpx;
}

.shop .title .titletxt {
    font-size: 28rpx;
    color: #333;
    margin-left: 10rpx;
}

.shop .detail {
    height: 165rpx;
    width: 690rpx;
    margin-bottom: 60rpx;
    display: flex;
    flex-direction: row;
    position: relative;
}

.shop .detail .image {
    height: 165rpx;
    width: 220rpx;
    background-color: #f5f5f5;
    border: #e0e0e0 1rpx solid;
    border-radius: 4rpx;
}

.shop .detail .information {
    height: 165rpx;
    width: 450rpx;
    line-height: 45rpx;
    margin-left: 20rpx;
    align-items: left;
    display: flex;
    flex-direction: column;
    position: relative;
}

.shop .detail .information .distance {
   display: inline-block;
    height: 22rpx;
    line-height: 1;
    font-size: 22rpx;
    color: #999;
}

.shop .detail .information .name {
    height: 28rpx;
    width: 100%;
    line-height: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 24rpx;
}

.shop .detail .information .address {
    margin-bottom: 24rpx;
    max-height: 70rpx;
    line-height: 35rpx;
    font-size: 24rpx;
    color: #333;
    display: -webkit-box;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.shop .detail .information .howfar {
    font-size: 22rpx;
    color: #999;
}

.shop .tag {
    width: 72rpx;
    height: 36rpx;
    position: absolute;
    text-align: center;
    line-height: 36rpx;
    left: 0;
}

.shop .tagimg {
    width: 72rpx;
    height: 36rpx;
    z-index: 5;
}

.shop .tagtxt {
    width: 72rpx;
    height: 36rpx;
    font-size: 22rpx;
    color: #fff;
    z-index: 4;
    position: absolute;
    top: 0;
    text-align: center;
    line-height: 36rpx;
}

.noShop {
    height: 70%;
    width: 750rpx;
    font-size: 24rpx;
    color: #999;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    z-index: 10;
}

.noShopimg {
    height: 200rpx;
    width: 200rpx;
}

.noShoptxt {
    margin-top: 10rpx;
}

.serch .cityimage {
    width: 14rpx;
    height: 8rpx;
    margin-left: 5rpx;
}

.city {
    width: 160rpx;
    height: 64rpx;
    font-size: 28rpx;
    color: #333;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.cityname {
    text-align: center;
    line-height: 64rpx;
    max-width: 110rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.citypickers {
    position: fixed;
    height: 100%;
    width: 100%;
    min-height: 100%;
    background-color: red;
}

.citypicker {
    font-size: 34rpx;
}

.citybody {
    background: #fff;
    position: fixed;
    bottom: 0px;
    z-index: 10;
    border-top: e8e8e8 solid 1rpx;
}

.cityheader {
    position: fixed;
    bottom: 250px;
    width: 100%;
    z-index: 10;
    font-size: 34rpx;
    border-top: #f5f5f5 solid 1rpx;
    background-color: #fff;
}

.city-cancel {
    float: left;
    margin: 30rpx;
    color: #818181;
    font-size: 34rpx;
}

.city-true {
    float: right;
    margin: 30rpx;
    color: #ff6419;
    font-size: 34rpx;
}

picker-view-column {
    line-height: 50px;
    width: 375rpx;
    text-align: center;
}

.black {
    width: 750rpx;
    height: 100%;
    opacity: 0.5;
    z-index: 5;
    position: fixed;
    bottom: 0;
    background-color: black;
}
