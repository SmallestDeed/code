page {
    display: block;
    min-height: 100%;
    background-color: #f5f5f5;
    overflow-x: hidden;
}
.my-assemble{
  display: flex;
  flex-direction: column;
}
.my-assemble-tab{
   display: flex;
   background-color: #fff;
}
.my-assemble-tab-item{
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  position: relative;
}
.my-assemble-tab .active{
   font-weight: bold;
}
.my-assemble-tab .active:after{
    content: '';
    display: block;
    width: 40rpx;
    height: 6rpx;
    background-color: #ff6419;
    border-radius: 3rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    margin-left: -20rpx;
}
.my-assemble-item{
  background-color: #fff;
  margin-top: 20rpx;
  padding:30rpx 30rpx 20rpx 30rpx;
  box-sizing: border-box;
}
.my-assemble-header{
  display: flex;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.my-assemble-header .goods-img{
  width: 160rpx;
  height: 160rpx;
}
.my-assemble-header .my-assemble-text{
   margin-left: 20rpx;
}
.my-assemble-bottom{
  display: flex;
  justify-content: space-between;
}
.my-assemble-bottom .my-assemble-img{
  margin-top: 20rpx;
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.my-assemble-bottom  .more{
  height:100rpx;
  line-height:90rpx;
}
.my-assemble-bottom .my-assemble-img image{
   width: 80rpx;
   height: 80rpx;
   margin-right: 20rpx;
   border-radius: 100%;
}
.my-assemble-bottom .icon_success{
   width: 160rpx;
   height: 160rpx;
   margin-top: -80rpx;
}
.my-assemble-text .goods-name{
  color: #333333;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.my-assemble-text .goods-price{
  color: #333333;
  font-size: 36rpx;
  font-weight: bold;
}
.my-assemble-text .goods-num{
  color: #999999;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.my-assemble-text .goods-status{
  color: #ff6419;
  font-size: 32rpx;
  margin-top: 20rpx;
  font-weight: bold;
}
.my-assemble-btn{
  width: 240rpx;
	height: 72rpx;
	background-color: #ff6419;
	border-radius: 36rpx;
  color: #ffffff;
  font-size: 28rpx;
  line-height: 72rpx;
  text-align: center;
  margin-top: 25rpx;
}
.my-assemble-btn:active{
  opacity: .6
}