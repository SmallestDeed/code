<block wx:if='{{selectNumber==2||selectNumber==3}}'>
    <view class='plan' wx:if="{{type!='comment'}}">
        <block wx:if='{{recommendCaseList.length<1}}'>
            <view class='noShop'>
                <image class='noShopimg' src='../mini-offcial-web/image/wei_icon_empty.png'></image>
                <view class='noShoptxt'>空空如也~</view>
            </view>
        </block>
        <block wx:if='{{recommendCaseList.length>0}}'>
            <view class='house-case' style='height:{{caseListheight}};overflow:{{caseListOverflow}}'>
                <view class='goods-details-case'>
                    <view class='case-list'>
                        <view class='case-item' wx:for='{{recommendCaseList}}' wx:key='{{index}}'>
                            <view class='case-image'>
                                <image class='bigPth' src='{{resourcePath + item.designPlanCoverPath}}' data-url='{{resourcePath + item.designPlanCoverPath}}' data-item='{{item}}' data-type='photo' bindtap='toThreeD'></image>
                                <block wx:if='{{selectNumber==2}}'>
                                    <view class='Renovation-house' bindtap='putInMyhouse' data-item='{{item}}'>
                                        装进我家
                                        <image class='arrow' src='./image/page_icon_more_white@2x.png'></image>
                                    </view>
                                </block>
                                <view class='seven-two-ico clearfix'>
                                    <view class='video identical-class'>
                                        <image src='./image/place_icon_vedio@2x.png' data-item='{{item}}' data-type='video' bindtap='toThreeD'></image>
                                    </view>
                                    <view class='single-point identical-class' data-item='{{item}}' data-type='720' bindtap='toThreeD'>
                                        <image src='./image/place_icon_720@2x.png'></image>
                                    </view>
                                    <view class='multi-point identical-class' data-item='{{item}}' data-type='roam' bindtap='toThreeD'>
                                        <image src='./image/place_icon_morepoint@2x.png'></image>
                                    </view>
                                </view>
                            </view>
                            <view class='case-text'>
                                <view class='case-mes clearfix'>
                                    <view class='case-mes-name fl'>
                                        {{item.designPlanName}}
                                    </view>
                                    <view class='case-mes-function fr clearfix'>
                                        <view class='collet fl clearfix' data-index='{{index}}' bindtap='collectCase' data-item='{{item}}'>
                                            <image src='{{item.isFavorite!=1?"./image/page_icon_collect_nor@2x.png":"./image/page_icon_collect_sct@2x.png"}}'>
                                            </image>
                                            <text>{{item.collectNum || 0}}</text>
                                        </view>

                                        <view class='thumbs-up fl clearfix' data-index='{{index}}' data-item='{{item}}' bindtap='likeCase'>
                                            <image src='{{item.isLike != 1?"./image/page_icon_like_nor@2x.png":"./image/page_icon_like_sct@2x.png"}}'>
                                            </image>
                                            <text>{{item.likeNum || 0}}</text>
                                        </view>
                                    </view>
                                </view>
                                <view class='case-style'>{{item.spaceStyleName}}</view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>
</block>

<block wx:if='{{selectNumber==4}}'>
    <view class='gary'></view>
    <view class='bck'>
        <block wx:for='{{caseList}}'>
            <view class='cases' bindtap='toWorkCase' data-id='{{item.caseId}}'>
                <image src='{{resourcePath+item.picPath}}' class='img' mode='aspectFill'></image>
                <view class='content'>
                    <view class='title'>{{item.caseTitle}}</view>
                    <!-- <view class='txt'>{{item.content}}</view> -->
                    <view class='more'>
                        <view class='text fl'>查看详情</view>
                        <image class='icon fr' src='/pages/personal-center/image/list_icon_more.png'></image>
                    </view>
                </view>
            </view>
            <view class='gary'></view>
        </block>
    </view>
</block>
