<wxs module="public" src="../../utils/public.wxs"></wxs>
<import src="../../utils/wxParse/wxParse.wxml" />
<view class='white'>
    <swiper wx:if="{{List.coverResList.length>0}}" class='toparea' 
        indicator-dots="{{List.coverResList.length>=2?true:false}}"autoplay='true' interval='5000' indicator-active-color="#ff6419" circular='true'>
        <block wx:for="{{List.coverResList}}">
            <swiper-item>
                <image src="{{resourcePath+item}}" mode='aspectFill' class="toparea" />
            </swiper-item>
        </block>
    </swiper>

    <view class='information'>
        <view class='title'>
            <view class='titletxt'>{{List.shopName}}<view class='pullRight' wx:if="{{distance&&isNk}}">{{distance?distance+'km':''}}</view></view>
            <!--<view class='range'>120.2km</view>-->
        </view>
        <view class='phone' bindtap='call' data-phone='{{List.contactPhone}}'>
            <view class='phonenumber'>{{List.contactPhone}}</view>
            <view class='pullRight'><image class='icon' src='../static/image/wei_icon_phone_02.png' mode='aspectFill'></image></view>
        </view>
        <view class='address'>
            <view class='addresstxt'>{{List.provinceName+List.cityName+List.areaName+List.shopAddress}}</view>
            <view class='pullRight'><image wx:if='distance&&isNk' class='icon' src='../static/image/wei_icon_gps.png' catchtap='goLocation' ></image></view>
        </view>
        <image class='activities' src='./image/wei_pic_sale.png'></image>
    </view>


    <view class='gary'></view>
    <view class='planchange'>

        <view class="{{selectNumber==1?'optionchecked':'option'}}" bindtap='changeplan' data-type='plan' data-num='1'>
            <view>门店信息</view>
            <block wx:if='{{selectNumber==1}}'>
                <view class='selectcolor'></view>
            </block>
        </view>
        <view class="{{selectNumber==2?'optionchecked':'option'}}" bindtap='changeplan' data-type='plan' data-num='2'>
            <view>一键方案</view>
            <block wx:if='{{selectNumber==2}}'>
                <view class='selectcolor'></view>
            </block>
        </view>

        <view class="{{selectNumber==3?'optionchecked':'option'}}" bindtap='changeplan' data-type='plan' data-num='3'>
            <view>样板间</view>
            <block wx:if='{{selectNumber==3}}'>
                <view class='selectcolor'></view>
            </block>
        </view>

        <view class="{{selectNumber==4?'optionchecked':'option'}}" bindtap='changeplan' data-type='plan' data-num='4'>
            <view>工程案例</view>
            <block wx:if='{{selectNumber==4}}'>
                <view class='selectcolor'></view>
            </block>
        </view>
    </view>
</view>

