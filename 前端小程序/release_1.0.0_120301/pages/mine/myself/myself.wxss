page {
    display: block;
    min-height: 100%;
    background-color: #f7f7f7;
}

.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    width: 100%;
}

.flex-iteam {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
}

.head-portrait {
	  position: relative;
    width: 100%;
    height: 200rpx;
    background-color: #ffffff;
    overflow: hidden;
}


.head-info{
	width: 100%;
	height: 200rpx;
	background-color: #ffffff;
  padding: 62rpx 40rpx;
  padding-left: 185rpx;
  padding-right: 80rpx;
  box-sizing: border-box;
  position: relative;
}
.head-info>image.userImg{
  width: 110rpx;
	height: 110rpx;
  position: absolute;
  left: 40rpx;
  top: 45rpx;
  border-radius: 50%;
  background: #e8e8e8;
}
.head-info>view{
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  min-height: 26rpx;
  line-height: 1;
}
.head-info>view.p1{
  font-family: PingFang-SC-Bold;
	font-size: 32rpx;
	font-weight: 600;
	color: #403834;
  margin-bottom: 20rpx;
  line-height: 36rpx;
}
.head-info>view.p2{
  font-family: PingFang-SC-Bold;
	font-size: 26rpx;
	font-weight: 600;
	color: #ffaa33;
  position: relative;
  padding-left: 40rpx;
}
.head-info>view.p2 image{
  position: absolute;
  left: 0;
  top:1rpx;
  height: 24rpx;
  width: 25rpx;
}
.head-info>image.goNext{
  width: 15rpx;
	height: 28rpx;
  position: absolute;
  top: 50%;
  right: 40rpx;
  margin-top: -14rpx;
}


.head-iteam{
	margin:0 auto;
	margin-top: 18rpx;
	text-align: center;

}
.head-iteam.image{
	position: relative;
	margin:0 auto;
	margin-top: 32rpx;
	width: 148rpx;
	height: 148rpx;
	border-radius: 100%;
}
.head-iteam.name{
	font-size: 32rpx;
	line-height: 1;
	margin-top: 20rpx;
	color: #333333;
}
.head-iteam.points{
	font-size: 40rpx;
	color: #ff6419;
}
.head-iteam.points text{
	font-size: 28rpx;
	color: #999999;
}
.head-iteam.points image{
	position: relative;
	height: 28rpx;
	width: 28rpx;
	margin-left: 2rpx;
	vertical-align: -3rpx;
}
.head-iteam.image .headimg{
	width: 148rpx;
	height: 148rpx;
	border-radius: 100%;
}

.person-nav {
    width: 100%;
    margin: 20rpx 0 0;
    height: 164rpx;
    background-color: #ffffff;
}
.person-nav .items{
  width: 25%;
  float: left;
  height: 164rpx;
  text-align: center;
  line-height: 1;
}
.person-nav .items image{
  width: 52rpx;
  height: 52rpx;
  margin: 34rpx auto 16rpx;
}
.person-nav .items view{
  font-family: PingFang-SC-Medium;
	font-size: 24rpx;
	color: #403834;
}
.preson-nav-iteam {
    text-align: center;
}

.list-cells {
    position: relative;
    margin-bottom: 20rpx;
    background-color: #fff;
    line-height: 1.41176471;
    font-size: 17rpx;
}
::-webkit-scrollbar{
  display: none;
}
.list-cells.first,.list-cell.about {
	border: none;
}
.list-cell{
	width: 100%;
  box-sizing: border-box;
	padding-left:40rpx;
	height: 108rpx;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
	color: #403834;
    position: relative;
}
.line{
    position: relative;
    width: 100%;
    left: 30rpx;
    bottom: 0;
    background-color: #e8e8e8;
    height: 2rpx;
    transform: scaleY(.5);
}
.list-cell__bd,.list-cell__ft{
	height: 108rpx;
	line-height: 108rpx;
}
.list-cell__count{
	height: 15rpx;
  width: 15rpx;
  border-radius: 50%;
  margin: 0 17rpx 0 0;
  position: relative;
  top: 50%;
  margin-top: -7rpx;
  background-color: #f94141;
  color: #fff;
  font-size: 20rpx;
}
.list-cell__bd{
	float: left;
	font-size: 28rpx;
	color: #333333;
}
.list-cell__ft{
	margin-right:40rpx;
	float: right;
	font-size: 24rpx;
	color: #999999;
}
.preson-nav-iteam{
	font-size: 24rpx;
	color: #333333;
	text-align: center;
}
.preson-nav-iteam .img{
	margin:0 auto;
text-align:center;
margin-bottom:20rpx;
width:48rpx;
height:48rpx;
overflow:hidden;


}
.preson-nav-iteam .img image{
	vertical-align: middle;
	width: 48rpx;
	height: 48rpx;
	margin:0 auto;
}
.list-cell.first{
	border: none;
}
.list-cell__ft image{
	width: 15rpx;
	height: 28rpx;
	vertical-align:-3rpx;
}
