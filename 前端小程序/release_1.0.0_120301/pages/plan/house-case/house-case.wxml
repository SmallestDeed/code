<view class='caseMain'>
    <view class='navTop'>
        <view class='items {{showChose&&types==1?"active":""}}' bindtap='showChose' data-types='1'>
            {{spaceTypeName}}
            <image src='/static/image/choose_icon_{{showChose&&types==1?"up":"down"}}.png'></image>
        </view>
        <view class='items {{showChose&&types==2?"active":""}}' bindtap='showChose' data-types='2'>{{styleName}}
            <image src='/static/image/choose_icon_{{showChose&&types==2?"up":"down"}}.png'></image>
        </view>
        <view class='items {{showChose&&types==3?"active":""}}' bindtap='showChose' data-types='3'>{{fitmentWayName}}
            <image src='/static/image/choose_icon_{{showChose&&types==3?"up":"down"}}.png'></image>
        </view>
    </view>
    <view class='bodys' wx:if="{{showChose}}" catchtap='showChoseClose'>
        <view class='rows' wx:if="{{types==1}}">
            <view class='rowsItems {{spaceTypeName==item.houseName?"active":""}}' wx:for="{{spaceList}}" 
            catchtap='styleTypeFun' data-info='{{item}}' wx:key="{{index}}">{{item.houseName}}</view>
        </view>
        <view class='rows' wx:if="{{types==2}}">
            <view class='rowsItems {{((styleName=="装修风格"&&index==0)||styleName==item.styleName)?"active":""}}' 
            catchtap='styleCodeFun'  data-info='{{item}}' wx:for="{{styleList}}" wx:key="{{index}}">{{item.styleName}}</view>
        </view>
        <view class='rows' wx:if="{{types==3}}">
            <view class='rowsItems {{((fitmentWayName=="装修方式"&&index==0)||fitmentWayName==item.name)?"active":""}}' 
            catchtap='switchFitmentWay' data-info='{{item}}' wx:for="{{fitmentWayList}}" wx:key="{{index}}">{{item.name}}</view>
        </view>
    </view>
    <view class='goods-details-case'>
        <case-list navText='方案' recommendCaseList='{{showList}}' isRecommonPlan='{{1}}' bindshowDecoratePriceBox='showDecoratePriceBox'></case-list>
        <import src="../../../component/emptyTemplate/emptyTemplate.wxml"/>
        <template is="emptyTemplate" data="{{ ...emptyTemplate }}"/> 
    </view>
</view>