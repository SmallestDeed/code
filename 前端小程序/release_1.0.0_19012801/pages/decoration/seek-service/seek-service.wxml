    <view class='supply_main_head'  wx:if="{{isShowList}}">
      <view class='head_tab'>
        <view class="head_tab_item {{sortId == 0? 'sort-item-active': ''}}"
         data-id='0' bindtap='selectSort' data-setsort='new'>
          最新
         <text class='line' wx:if="{{sortId==0}}"></text>
        </view>
        <view class="head_tab_item {{sortId == 1? 'sort-item-active': ''}}" data-id='1' bindtap='selectSort' data-setsort='hot'>
