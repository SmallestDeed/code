<view class='team-list'>
  <view class='item' wx:for='{{list}}' wx:key='{{index}}' bindtap='goDetails' data-item='{{item}}'>
    <view class='meassge-box'>
      <image src='{{item.logoUrl?resourcePath+item.logoUrl:"/static/images/header.png"}}'></image>
      <view class='info'>
        <view class='name'>{{item.shopName}}</view>
        <view class='experience'>{{item.workingYears}}年设计经验</view>
      </view>
      <view class='communication' catchtap='goutong' data-item='{{item}}'>立即沟通</view>
    </view>
    <view class='img-box'>
      <image wx:for='{{item.shopProjectCaseList}}'
        bindtap='goDetails'
        data-item='{{item}}'
        wx:for-index='indexs'
        wx:for-item='items'
        wx:key='{{indexs}}' 
        wx:if='{{indexs<3}}'
        class='{{indexs < 2 ? "img" : ""}}'
        mode='aspectFill'
        src='{{resourcePath+items.picPath}}'></image>


























    </view>
  </view>
</view>
