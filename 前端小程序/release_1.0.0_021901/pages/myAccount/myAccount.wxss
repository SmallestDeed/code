.header{
  position: relative;
  height: 320rpx;
  padding: 30rpx;
	border-radius: 10rpx;
}
.header-img{
  width: 100%;
  height: 320rpx;
  border-radius: 10rpx;
  box-shadow: 0rpx 60rpx 40rpx -30rpx #ffd8b2;
}
.balance-box{
  position: absolute;
  top: 110rpx;
  left: 60rpx;
}
.balance-text{
  font-size: 32rpx;
  color: #ffffff;
}
.balance{
  width: 600rpx;
  margin-top: 10rpx;
  font-size: 100rpx;
  color: #ffffff;
  display: flex;
  justify-content: space-between;
}
.balance text{
  width: 430rpx;
}
.btn{
  width: 161rpx;
	height: 60rpx;
  line-height: 60rpx;
  margin-top: 45rpx;
	border-radius: 30rpx;
  font-size: 28rpx;
  text-align: center;
  color: #ffaa33;
  background-color: #ffffff;
}
.title{
	height: 40rpx;
  line-height: 40rpx;
  margin: 38rpx 0;
  padding: 0 30rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}
.list{
  padding: 0 30rpx;
  font-size: 28rpx;
  color: #333333;
}
.item{
  height: 64rpx; 
  padding: 36rpx 0;
  border-bottom: 1rpx solid #e0e0e0;
  display: flex;
  justify-content: space-between;
}
.left{
  font-size: 28rpx;
}
.message{
  height: 30rpx;
  line-height: 30rpx;
}
.date{
  margin-top: 17rpx;
  font-size: 20rpx;
  color: #999999;
}
.right{
  line-height: 64rpx;
  font-size: 32rpx;
}
.right-active{
  font-size: 32rpx;
  line-height: 64rpx;
  color: #ffaa33;
}

.bindPhone {
  width: 690rpx;
  height: 120rpx;
	background-color: #f5f5f5;
  margin-left: 30rpx;
	border-radius: 10rpx;
  margin-bottom: 57rpx;
  font-size: 32rpx;
  color: #999;
  line-height: 120rpx;
  position: relative;
  padding-left: 42rpx;
  box-sizing: border-box;
}
.bindBut {
  width: 161rpx;
	height: 60rpx;
	background-color: #999999;
	border-radius: 30rpx;
  position: absolute;
  top: 26rpx;
  right: 40rpx;
  font-size: 28rpx;
  color: #fff;
  text-align: center;
  line-height: 60rpx;
}
.toast {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 2;
}
.toast_box {
  width: 560rpx;
	height: 500rpx;
	background-color: #ffffff;
	border-radius: 10px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -280rpx;
  margin-top: -250rpx;
}
.closeImg {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width:  50rpx;
  height: 50rpx;
}
.toast_title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-top: 60rpx;
}
.phoneInpu,.codeBox {
  width: 480rpx;
	height: 88rpx;
	background-color: #f5f5f5;
	border-radius: 6rpx;
  display: block;
  margin: 0 auto;
  line-height: 88rpx;
  padding-left: 30rpx;
  font-size: 28rpx;
  color: #333;
  margin-top: 40rpx;
}
.codeBox {
  margin-top: 24rpx;
  display: flex;
  align-items: center;
}
.codeInpu {
  width: 250rpx;
  vertical-align: middle;
  border-right: solid 2px #e0e0e0;
}
.codeBut {
  width:150rpx;
  text-align:center;
  font-size:28rpx;
  color:#999;
  display:inline-block;
  vertical-align:middle;
  margin-left:35rpx;
}
.toast_but {
  width: 480rpx;
	height: 88rpx;
	background-color: #29cccc;
	border-radius: 6rpx;
  margin: 0 auto;
  line-height: 88rpx;
  font-size: 28rpx;
  color:rgba(255, 255, 255, 0.6);
  margin-top: 24rpx;
  text-align: center;
}