/* 博文 */
.bowen{
  border-top:solid 1rpx #e8e8e8;
  padding: 30rpx;
}
.bowen .title{
  display: flex;
  justify-content: space-between
}
.bowen .title .arrow{
  vertical-align:-13rpx;
  width:56rpx;
  height:56rpx
}

.bowenList .bowenImg{
  width: 200rpx;
  height: 150rpx;
  background: #999;
  border-radius: 6rpx
}
.bowenList .listItem{
  margin-bottom:60rpx;
  display: flex;
  justify-content: start
}
.listItem .bowenTitle{
  width:440rpx;
  word-break: break-all;
  font-size: 32rpx;
  margin-bottom: 10rpx;
  color:#333;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.listItem .bowenInfo{
  margin-left: 31rpx;
}
.listItem .times{
  font-size: 24rpx;
  margin-top:20rpx;
  color: #999;
}