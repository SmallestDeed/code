page{
  background-color: #f7f7f7;
}
.chat{
 
}
.hint{
  padding: 23rpx 0;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
.header-box{
   padding: 0 40rpx;
}
.role-message-box{
  height: 80rpx;
  padding: 32rpx;
	border-radius: 4rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-start;
}
.message-head{
  width: 80rpx;
  height: 80rpx;
}
.message{
  margin-left: 25rpx;
   color: #333333;
}
.name{
  width: 500rpx;
  margin-top: 3rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.data{
  height: 26rpx;
  line-height: 26rpx;
  margin-top: 15rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: flex-start;
}
.title{
  color: #999999;
  margin-right: 10rpx;
}
.titles{
  color: #999999;
  margin: 0 10rpx;
  padding-left: 10rpx;
  border-left: 1rpx solid #999999;
}
.chat-list{
  overflow: hidden;
  padding: 0 40rpx 120rpx;
}
.box{

}
.box image{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.date{
  margin: 64rpx 0 28rpx;
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}
.own{
  display: flex;
  justify-content: flex-end;
}
.own-text{
  max-width: 550rpx;
  margin-right: 15rpx;
  padding: 25rpx 29rpx;
  font-size: 28rpx;
  color: #ffffff;
  background-color: #29cccc;
	border-radius: 40rpx 0rpx 40rpx 40rpx;
}
.rests{
  display: flex;
  justify-content: flex-start;
}
.rests .text{
  max-width: 550rpx;
  margin-left: 15rpx;
  padding: 25rpx 29rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
	border-radius: 0rpx 40rpx 40rpx 40rpx;
}
.rests-text{
  max-width: 550rpx;
  margin-left: 15rpx;
  padding: 25rpx 29rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
	border-radius: 0rpx 40rpx 40rpx 40rpx;
}
.send-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 20rpx;
	background-color: #ffffff;
  display: flex;
  justify-content: flex-start;
}
.send-input{
  width: 620rpx;
	height: 60rpx;
  font-size: 28rpx;
	background-color: #f5f5f5;
	border-radius: 4rpx;
}
.send-btn{
  line-height: 60rpx;
  margin-left: 17rpx;
  font-size: 32rpx;
  color: #29cccc;
}