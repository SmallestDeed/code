page{
  background-color: #f5f5f5;
}
.design{
  padding: 118rpx 30rpx 30rpx;
}
.nav-box{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-box-active{
  width: 100%;
  height: 100%;
  background: rgba(000, 000, 000, 0.5);
}
.nav{
  width: 750rpx;
	height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e8e8e8;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
}
.nav-item{
  width: 40%;
  height: 88rpx;
  display: flex;
  justify-content: center;
}
.nav-color{
  color: #29cccc
}
.nav-item image{
  width: 20rpx;
  height: 20rpx;
  margin: 35rpx 10rpx 0;
}
.select_bg {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top:0;
  z-index: 0;
}
.select{
  background-color: #ffffff;
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  position: absolute;
  left: 0;
  top:88rpx;
  z-index: 1;
}
.select-item{
  width: 216rpx;
	height: 80rpx;
  line-height: 80rpx;
  margin: 0 20rpx 20rpx 0;
	border-radius: 4rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333333;
  background-color: #f5f5f5;
}
.item-right{
  width: 216rpx;
	height: 80rpx;
  line-height: 80rpx;
  margin-right: 0;
  border-radius: 4rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333333;
  background-color: #f5f5f5;
}
.item-color{
  background-color: #ebf5f5;
  color: #29cccc;
}
.item{
  margin-bottom: 30rpx;
}