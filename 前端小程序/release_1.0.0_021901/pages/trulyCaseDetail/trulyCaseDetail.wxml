<view class='trulyCaseDetail'>
    <view class='detailTitle'>{{detailInfo[0].caseTitle}}</view>
    
    <view class='userInfo'>
       <view class='userHead'>
          <image class='imgs' 
              mode='aspectFill' 
              wx:if='{{shopDetail.logoUrl}}' 
              src='{{resourcePath+shopDetail.logoUrl}}'>
          </image>
          <image class='imgs' mode='aspectFill' wx:else src='{{defaultHeader}}'></image>
          <view>
               <view class='name'>{{shopDetail.shopName}}</view>
               <view class='counter'>浏览 {{detailInfo[0].browseCount}}  |  {{detailInfo[0].releaseDay}}天前发布</view>
          </view>
       </view>
       <view class='goutong' bindtap='goutong'>立即沟通</view>
    </view>                       

    <view class='detailInfo'>
      <rich-text bindtap="viewPic" nodes='{{detailInfo[0].content}}'></rich-text>
    </view>

</view>
