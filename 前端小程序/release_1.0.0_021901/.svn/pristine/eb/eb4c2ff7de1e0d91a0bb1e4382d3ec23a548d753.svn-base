<view class="main">
  <view class='head'>
    <image src='/static/images/yuyue_bg_pic.png'></image>
  </view>
  <view class='box'>
    <view class='inpuBox'>
      <image src='/static/images/yuyue_icon_Head.png'></image>
      <input bindinput='getName'
        value='{{name}}' 
        placeholder="请输入您的姓名" ></input>
    </view>
    <view class='inpuBox'>
      <image src='/static/images/yuyue_icon_phone.png'></image>
      <input bindinput='getPhone'
        value='{{phone}}' 
        placeholder="请输入您的联系电话" 
        type='number'></input>
    </view>
    <view class='inpuBox'>
      <image src='/static/images/yuyue_icon_tower.png'></image>
      <input bindinput='getAreaName'
        value='{{areaName}}' 
        placeholder="请输入您的小区名称" ></input>
    </view>
    <view class='but'>立即预约</view>
    <view class='titBox'>
      <view class='tit_item'>咨询电话：0755-28286666</view>
      <view class='tit_item'>量房范围：深圳市罗湖区、福田区、宝安区</view>
    </view>
  </view>
  <view class='toast' wx:if="{{toastShow}}">
      <view class='toast_box'>
        <image class='closeImg' bindtap='closeToast' src='/static/images/goods_icon_close@2x.png'></image>
        <image class='suc_icon' src='/static/images/pop_icon_success.png'></image>
        <view class='suc_title'>预约成功!</view>
        <view class='suc_tit'>稍后会有专业人员与您联系</view>
        <view class='suc_tit'>请注意接听来电</view>
      </view>
    </view>
</view>