.img{
  width: 100% !important;
  object-fit: contain;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.trulyCaseDetail{
  border-top: solid 1rpx #e8e8e8;
  padding: 10rpx 30rpx;
  padding-bottom: 40rpx;
}
.trulyCaseDetail .detailTitle{
  font-size: 44rpx;
  margin-top:40rpx;
  margin-bottom:48rpx;
  color:#333;
  font-weight: bold;
}
.trulyCaseDetail .userInfo{
  display: flex;
  justify-content: space-between;
}
.trulyCaseDetail .userHead{
  display: flex;
}
.userHead .imgs{
  width: 68rpx;
  height: 68rpx;
  border-radius: 34rpx;
  margin-right: 20rpx;
  background: #999;
}
.userHead .name{
  font-size: 24rpx;
  width:456rpx;
  color: #333;
}
.userHead .counter{
  font-size: 24rpx;
  color: #999;
}
.userInfo .goutong{
height:56rpx;
width: 180rpx;
text-align:center;
line-height:56rpx;
background-color:#ffffff;
border-radius:4rpx;
font-size:24rpx;
border:solid 1rpx #29cccc;
color:#29cccc;
margin-left:10rpx;

}
.trulyCaseDetail .detailInfo{
  font-size: 32rpx;
  line-height: 52rpx;
  color: #333;
  margin-top: 56rpx;
}
.detailInfo img{
  width: 100%;
  margin-top: 41rpx;
  border-radius:10rpx; 
}
.detailInfo image{
  width: 100%;
  margin-top: 41rpx;
  border-radius:10rpx; 
}