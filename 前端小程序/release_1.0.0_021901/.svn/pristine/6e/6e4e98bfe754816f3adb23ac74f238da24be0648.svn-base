// pages/order/order.js
let app = getApp(), API = app.API;
Page({

  /**
   * 页面的初始数据
   */
  data: {
      name:'',
      phone:'',
      areaName:'',

      // 弹框
    toastShow: false,
    serviceArea: ''
  },

  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    if (wx.getStorageSync('serviceArea')) {
      this.setData({
        serviceArea: wx.getStorageSync('serviceArea'),
      })
    }
  },
  getName(e) {
    this.setData({
      name: e.detail.value
    })
  },
  getPhone(e) {
    this.setData({
      phone: e.detail.value
    })
  },
  getAreaName(e) {
    this.setData({
      areaName: e.detail.value
    })
  },
  closeToast() {
    this.setData({
      toastShow: false,
      name: '',
      phone: '',
      areaName: ''
    })
  },
  orderNow() {
    if(!(this.data.name.length>=1&&this.data.name.length<=20)) {
      wx.showToast({
        title: '请输入正确的姓名',
        icon: 'none'
      })
      return
    }
    if (!app.regMobile.test(this.data.phone)) {
      wx.showToast({
        title: '请输入正确的手机号',
        icon: 'none'
      })
      return
    }
    if (!(this.data.areaName.length >= 1 && this.data.areaName.length <= 50)) {
      wx.showToast({
        title: '请输入正确的小区名称',
        icon: 'none'
      })
      return
    }
    let data = {
      shopId: wx.getStorageSync('shopId'),
      serviceType:2,
      userName: this.data.name,
      userPhone: this.data.phone,
      appointUserId: wx.getStorageSync('id'),
      areaName: this.data.areaName
    }
    API.orderService(data).then(res=>{
      if(res.success) {
        this.setData({
          toastShow: true
        })
      }
    })
  },
  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {

  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})