/* component/team-list/team-list.wxss */
.item{
  padding: 30rpx;
  margin-bottom: 20rpx;
  background-color: #ffffff;
	border-radius: 10rpx;
}
.meassge-box{
  display: flex;
  justify-content: space-between;
}
.meassge-box image{
  width: 80rpx;
	height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.info{
  width: 400rpx;
}
.name{
  margin-top: 5rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}
.experience{
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #999999;
}
.communication{
  width: 116rpx;
	height: 44rpx;
  line-height: 44rpx;
  margin-top: 18rpx;
	border-radius: 4rpx;
  font-size: 24rpx;
  color: #29cccc;
	border: solid 1rpx #29cccc;
  text-align: center;
}
.img-box{
  margin-top: 24rpx;
  display: flex;
  justify-content: flex-start;
}
.img-box image{
  width: 200rpx;
	height: 150rpx;
  border-radius: 8rpx;
}
.img-box .img{
  margin-right: 20rpx;
}