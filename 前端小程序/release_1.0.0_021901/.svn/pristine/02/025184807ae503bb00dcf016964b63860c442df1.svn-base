<!--pages/bowenDetail/bowenDetail.wxml-->
<view class='trulyCaseDetail'>
    <view class='detailTitle'>{{articleDetail.articleTitle}}</view>
    
    <view class='userInfo'>
       <view class='userHead'>
          <image class='imgs' 
              mode='aspectFill' 
              wx:if='{{shopDetail.logoUrl}}' 
              src='{{resourcePath+shopDetail.logoUrl}}'>
          </image>
          <image class='imgs' wx:else mode='aspectFill' src='{{defaultHeader}}'></image>
          <view>
               <view class='name'>{{shopDetail.shopName}}</view>
               <view class='counter'>浏览 {{articleDetail.browseCount == null ? 0 : articleDetail.browseCount}}  |  {{articleDetail.releaseTimeStr}}发布</view>
          </view>
       </view>
       <view class='goutong' bindtap='goutong'>立即沟通</view>
    </view>

    <view class='detailInfo'>
       <rich-text nodes='{{articleDetail.content}}'></rich-text>
    </view>

</view>

