page{
  background-color: #f5f5f5;
}
.design{
  padding: 118rpx 30rpx 30rpx;
}
.nav-box{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.nav-box-active{
  width: 100%;
  height: 100%;
  background: rgba(000, 000, 000, 0.5);
}
.nav{
  width: 750rpx;
	height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  border-bottom: 1rpx solid #e8e8e8;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
}
.nav-item{
  width: 40%;
  height: 88rpx;
  display: flex;
  justify-content: center;
}
.nav-item image{
  width: 18rpx;
  height: 10rpx;
  margin: 40rpx 10rpx 0;
}
.select{
  background-color: #ffffff;
  padding: 30rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}
.select-item{
  width: 216rpx;
	height: 80rpx;
  line-height: 80rpx;
  margin: 0 20rpx 20rpx 0;
	border-radius: 4rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333333;
  background-color: #f5f5f5;
}
.item-right{
  width: 216rpx;
	height: 80rpx;
  line-height: 80rpx;
  margin-right: 0;
  border-radius: 4rpx;
  font-size: 28rpx;
  text-align: center;
  color: #333333;
  background-color: #f5f5f5;
}
.item-color{
  background-color: #ebf5f5;
  color: #29cccc;
}
.item{
  margin-bottom: 30rpx;
}