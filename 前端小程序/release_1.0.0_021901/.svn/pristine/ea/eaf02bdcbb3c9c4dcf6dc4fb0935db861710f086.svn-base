.design-item{
  position: relative;
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
}
.design-img-box{
  width: 100%;
  height: 388rpx;
  background-color: #fff;
}
.design-img-btn{
  padding: 0;
  border-radius: 0rpx;
}
.design-img{
  width: 100%;
  height: 388rpx;
  display: block;
}
.icon-box{
  position: absolute;
  top: 296rpx;
  left: 0;
}
.icon{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  margin-left: 30rpx;
  padding: 0;
  background: rgba(000, 000, 000, 0);
}
.icon image{
  width: 70rpx;
  height: 70rpx;
}
.fitment-btn{
  position: absolute;
  top: 296rpx;
  right: 0;
  width: 200rpx;
	height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
	background-color: #29cccc;
  color: #fff;
	border-radius: 34rpx 0rpx 0rpx 34rpx;
  overflow: hidden;
}
.btn{
  display: inline-block;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
  margin-left: 40rpx;
  color: #fff !important;
  padding: 0;
  background-color: #29cccc;
}
button::after{
  border: none;
}
.fitment-btn image{
  position: absolute;
  top: 24.5rpx;
  right: 25rpx;
  width: 18rpx;
	height: 24rpx; 
}
.design-footer{
  height: 78rpx;
  padding:20rpx 10rpx 30rpx 30rpx;
}
.name-box{
  height: 50rpx;
  font-size: 24rpx;
  color: #999999;
  display: flex;
  justify-content: space-between
}
.left{
  width: 400rpx;
  height: 50rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  font-weight: bold;
  color: #333333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.right{
  line-height: 50rpx;
  display: flex;
  justify-content: center;
}
.number{
  width: 60rpx;
}
.number-color{
  color: #ffaa33
}
.collect{
  width: 50rpx;
	height: 50rpx;
  display: block;
}
.praise{
  width: 50rpx;
	height: 50rpx;
  margin-left: 4rpx;
  display: block;
}
.message{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}