page{
  background-color: #f5f5f5;
}
.house-list{
  padding: 30rpx;
}
.house{
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx; 
  overflow: hidden;
}
.house-img{
  width: 100%;
  height: 520rpx;
  display: block;
}
.message-box{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.message{
  width: 400rpx;
}
.name{
  height: 35rpx;
  line-height: 35rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.area{
  font-size: 24rpx;
  color: #999999;
  margin-top: 15rpx;
}
.btn{
  width: 180rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  text-align: center;
  color: #ffffff;
	background-color: #29cccc;
	border-radius: 36rpx;
}
.hint{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(000, 000, 000, 0.4)
}
.hint-box{
  width:540rpx;
  background-color:#fff;
  border-radius:10rpx;
  margin: 400rpx auto;
}
.title{
  font-size:36rpx;
  font-weight:600;
  text-align:center;
  color:#29cccc;
  padding: 50rpx 0 40rpx;
}
.content{
  font-size:28rpx;
  line-height:48rpx;
  color: #333;
  padding: 0 60rpx 40rpx;
}
.btn-box{
  height:88rpx;
  line-height:88rpx;
  font-size:32rpx;
  border-top:1rpx solid #efefef;
  display: flex;
  justify-content: center;
}
.left{
  flex-basis:50%;
  border-right: 1rpx solid #efefef;
  text-align:center;
  box-sizing:border-box;
}
.right{
  flex-basis:50%;
  text-align:center;
  box-sizing:border-box;
  color:#29cccc;
}
.confirm{
  height:88rpx;
  line-height:88rpx;
  font-size:32rpx;
  border-top:1rpx solid #efefef;
  color:#29cccc;
  text-align: center;
}