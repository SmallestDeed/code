page{
  background-color: #f5f5f5;
}
.house-list{
  padding: 30rpx;
}
.house{
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 10rpx; 
  overflow: hidden;
}
.house-img{
  width: 100%;
  height: 520rpx;
  display: block;
}
.message-box{
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
}
.message{
  width: 400rpx;
}
.name{
  height: 35rpx;
  line-height: 35rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}
.area{
  font-size: 24rpx;
  color: #999999;
  margin-top: 15rpx;
}
.btn{
  width: 180rpx;
  height: 72rpx;
  line-height: 72rpx;
  font-size: 28rpx;
  text-align: center;
  color: #ffffff;
	background-color: #29cccc;
	border-radius: 36rpx;
}