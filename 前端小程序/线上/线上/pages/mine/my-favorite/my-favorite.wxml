<navigator url="/pages/mine/my-favorite-pan/my-favorite-pan" class="favorite-iteam clearfix">
	<view class="fl">
		<view class="title">收藏的方案</view>
    <block>
		<view class="num">{{planListLength}}套</view>
    </block>
	</view>
	<view class="image">
		<image src="/static/image/goods_type_banner@3x.png"></image>
	</view>
</navigator>

<navigator url="/pages/mine/my-favorite-goods/my-favorite-goods" class="favorite-iteam clearfix">
	<view class="fl">
		<view class="title">收藏的商品</view>
    <block wx:if='{{goodsList!=null}}'>
		  <view class="num">{{goodsList.length}}件</view>
    </block>
    <block wx:if='{{goodsList==null}}'>
		  <view class="num">0件</view>
    </block>
	</view>
	<view class="image">
		<image src="/static/image/goods_pic_sofa@3x.png"></image>
	</view>
</navigator>
