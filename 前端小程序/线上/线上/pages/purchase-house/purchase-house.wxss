/* pages/purchase-house/purchase-house.wxss */
view{
  box-sizing: border-box;
}
.purchase-house{
  width: 100%;
  height: 100%;
  background-color: #ededed;
  padding-top: 20rpx;
}
.purchase-house .house-residue{
  width: 100%;
  height: 280rpx;
  padding-top: 66rpx;
  padding-left: 32rpx;
  background-color: #fff;
}
.house-residue .residue-text .text-mes{
  color: #333333;
  font-size: 28rpx;
}
.house-residue .residue-text .text-num{
  font-size: 28rpx;
  color: #999999;
}
.house-residue .residue-text .text-num text{
  font-size: 120rpx;
  line-height: 150rpx;
  color: #ff6419;
}
.house-residue .residue-image{
  width: 174rpx;
  height: 146rpx;
}
.house-residue .residue-image image{
  width: 174rpx;
  height: 146rpx;
}
.house-choose{
  margin-top: 20rpx;
  width: 100%;
  height:176rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
}
.house-choose .common{
  width: 750rpx;
  height: 88rpx;
  padding:0 30rpx;
  position: relative;
}
.house-choose .choose-one{
  border-bottom:solid #ededed 1rpx;
}
.house-choose .choose-one .choose-btn{
  position: absolute;
  right: 30rpx;
  top: 0;
}

.house-integral{
  line-height: 66rpx;
  height: 66rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  width: 750rpx;
  position: relative;
}
.house-integral .integral-message{
  color: #999;
}
.house-integral .integral-recharge{
  position: absolute;
  right: 30rpx;
  top: 0;
  color: #ff6419;
}

.house-buy-confirm{
  width:690rpx;
  width: calc(100% - 60rpx);
  width: -webkit-calc(100% - 60rpx);
  width: -moz-calc(100% - 60rpx);
  height:81rpx;
  border-radius: 39rpx;
  background-color: #ff6419;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  line-height: 81rpx;
  margin: 53rpx auto 0;
}