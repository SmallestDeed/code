/* pages/decoration/supplyDetail/supplyDetail.wxss */
page{
  background-color: #ffffff;
}
.tilie{
  position: relative;
  padding: 40rpx 30rpx;
  border-top: 1rpx solid #e8e8e8;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 60rpx;
  overflow: hidden;
  text-indent:60rpx;
  min-height: 60rpx;
}
.tilie-icon{
  position: absolute;
  top: 51rpx;
  left: 30rpx;
  width: 40rpx;
	height: 40rpx;
	border-radius: 2rpx;
}
.announce-info{
  padding: 0 30rpx 160rpx;
  font-size: 24rpx;
  color: #999999;
}
.time{
  display: flex;
  justify-content: flex-start;
  height: 25rpx;
  line-height: 25rpx;
}
.time view{
  margin: 0 10rpx;
}
.separation{
  width: 3rpx;
  height: 25rpx;
  background-color:  #999999;
  margin: 0 20rpx;
}
.site{
  margin-top: 23rpx;
}
.name{
  height: 60rpx;
  margin: 60rpx 0 36rpx;
  font-size: 24rpx;
  color: #333333;
  line-height: 60rpx;
  font-weight: bold;
  display: flex;
  justify-content: flex-start;
}
.nickname{
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
  background-color: #f5f5f5;
  border-radius: 50%;
}
.message{
  font-size: 28rpx;
  line-height: 48rpx;
  color: #333333;
  margin-bottom: 35rpx;
}
.message-img{
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx; 
}
.btn-box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 160rpx;
  background-color: #fff;
}
.btn{
  width: 670rpx;
	height: 80rpx;
  margin: 40rpx auto;
	background-color: #f7f7f7;
	border-radius: 40rpx;
  display: flex;
  justify-content: center;
}
.btn image{
  width: 28rpx;
  height: 25rpx;
  margin: 29rpx 10rpx 0 0;
}
.btn-text{
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  line-height: 80rpx;
}
.contact-btn{
  width: 670rpx;
	height: 80rpx;
  margin: 40rpx auto;
  border-radius: 40rpx;
  background-color: #ff6419;
  color: #fff;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
}
