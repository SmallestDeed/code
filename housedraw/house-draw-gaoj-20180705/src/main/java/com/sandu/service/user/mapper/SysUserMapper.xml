<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.service.user.dao.SysUserMapper">
  <select id="getSysUserByMobile" resultType="com.sandu.api.user.model.SysUser">
    SELECT
      u.id,
      u.user_name,
      u.nick_name,
      u.mobile
    FROM
      sys_user u
    WHERE u.is_deleted = 0
      AND u.mobile = #{mobile}
  </select>
</mapper>