<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.service.area.dao.BaseMobileAreaMapper">

    <resultMap id="AllResultMap" type="com.sandu.api.area.model.BaseMobileArea">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result  column="mobile_prefix" property="mobilePrefix" jdbcType="VARCHAR" />
        <result  column="corp" property="corp" jdbcType="VARCHAR" />
        <result  column="province_code" property="provinceCode" jdbcType="VARCHAR" />
        <result  column="province_name" property="provinceName" jdbcType="VARCHAR" />
        <result  column="city_code" property="cityCode" jdbcType="VARCHAR" />
        <result  column="city_name" property="cityName" jdbcType="VARCHAR" />
        <result  column="zip_code" property="zipCode" jdbcType="VARCHAR" />
        <result  column="area_code" property="areaCode" jdbcType="VARCHAR" />
    </resultMap>

    <select id="getAreaByMobile" parameterType="java.lang.String" resultMap="AllResultMap">
        SELECT * FROM base_mobile_area
        WHERE  mobile_prefix = #{mobilePrefix}
    </select>
</mapper>