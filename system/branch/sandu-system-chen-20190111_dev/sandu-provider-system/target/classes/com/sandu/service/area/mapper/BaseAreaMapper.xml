  <!-- 根据省市区名称查询省市区编码 -->
  <select id="getAreaCodeByName" resultType="com.sandu.api.area.output.BaseAreaBo">
	SELECT 
	  d.area_code provinceCode,
	  d.area_name provinceName,
	  c.area_code cityCode,
	  c.area_name cityName,  
	  b.area_code areaCode,
	  b.area_name areaName,  
	  a.area_code streetCode,
	  a.area_name streetName
	FROM
	  (SELECT 
	    * 
	  FROM
	    base_area 
	  WHERE area_name = #{streetName}) a 
	  INNER JOIN 
	    (SELECT 
	      * 
	    FROM
	      base_area 
	    WHERE area_name = #{areaName}) b 
	    ON a.pid = b.area_code 
	  INNER JOIN 
	    (SELECT 
	      * 
	    FROM
	      base_area 
	    WHERE area_name = #{cityName}) c 
	    ON b.pid = c.area_code 
	  INNER JOIN 
	    (SELECT 
	      * 
	    FROM
	      base_area 
	    WHERE area_name = #{provinceName}) d 
	    ON c.pid = d.area_code 
  </select>

