    <insert id="insertUserPlatformRole">
           INSERT INTO
            user_jurisdiction
            (
             user_id,platform_id,jurisdiction_status,jurisdiction_effective_time,jurisdiction_failure_time,
             modifier_user_id,sys_code,creator,gmt_create,modifier,
             gmt_modified,is_deleted,remark
            )
          SELECT
              user_id,#{platformId},1,NULL,NULL,
              user_id,now(),'admin',now(),'admin',
              NOW(),'0',NULL
          FROM
              services_account_rel as a
          WHERE
              a.is_deleted = 0 AND
              a.services_id = #{servicesId} AND
              NOT EXISTS(
                SELECT
                  id
                FROM
                    user_jurisdiction
                WHERE
                    user_id = a.user_id
                AND platform_id = #{platformId}
              )
    </insert>
