<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sandu.service.imallOrderShipment.dao.ImallOrderShipmentAddressDao">

    <!--保存发货单-->
    <insert id="insertImallOrderShipmentAddress" parameterType="com.sandu.api.imallOrderShipment.model.ImallOrderShipmentAddress" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO `imall_order_shipment_address`
        (shipment_id,country,province,city,area,address,zipcode,recv_name,mobile,creator,
        gmt_create,modifier,gmt_modified,is_deleted,sys_code)
        VALUES (#{shipmentId},#{country},#{province},#{city},#{area},#{address},
        #{zipcode},#{recvName},#{mobile},#{creator},CURRENT_TIMESTAMP,#{modifier},CURRENT_TIMESTAMP,#{isDeleted},#{sysCode})
    </insert>

    <!--通过id获取发货单信息-->
    <select id="getImallOrderShipmentAddress" resultType="com.sandu.api.imallOrderShipment.model.ImallOrderShipmentAddress">
      select shipment_id,country,province,city,area,address,zipcode,recv_name,mobile,creator,gmt_create,modifier,gmt_modified,is_deleted
      from imall_order_shipment_address
      where id=#{id}
    </select>

    <!--通过order_id获取发货单列表-->
    <select id="getImallOrderShipmentAddressList" resultType="com.sandu.api.imallOrderShipment.model.ImallOrderShipmentAddress">
      select shipment_id,country,province,city,area,address,zipcode,recv_name,mobile,creator,gmt_create,modifier,gmt_modified,is_deleted
      from imall_order_shipment_address
      where shipment_id=#{shipmentId}
    </select>

</mapper>