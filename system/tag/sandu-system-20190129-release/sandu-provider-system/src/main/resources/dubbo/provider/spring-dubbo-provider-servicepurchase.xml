<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
					http://www.springframework.org/schema/beans/spring-beans.xsd
                    http://code.alibabatech.com/schema/dubbo
                    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 声明需要暴露的服务接口 -->
    <dubbo:service interface="com.sandu.api.servicepurchase.serivce.ServicesAccountRelService"
                   ref="servicesAccountRelService" protocol="dubbo" timeout="${dubbo.timeout}"
                   version="${dubbo.version}"/>
                   
    <dubbo:service interface="com.sandu.api.servicepurchase.serivce.ServicesBaseInfoService"
                   ref="servicesBaseInfoService" protocol="dubbo" timeout="${dubbo.timeout}"
                   version="${dubbo.version}"/>

	<dubbo:service interface="com.sandu.api.servicepurchase.serivce.ServicesPriceService"
                   ref="servicesPriceService" protocol="dubbo" timeout="${dubbo.timeout}"
                   version="${dubbo.version}"/>                                      
	
	<dubbo:service interface="com.sandu.api.servicepurchase.serivce.ServicesPurchaseRecordService"
                   ref="servicesPurchaseRecordService" protocol="dubbo" timeout="${dubbo.timeout}"
                   version="${dubbo.version}"/>                                      
	
	<dubbo:service interface="com.sandu.api.servicepurchase.serivce.ServicesRoleRelService"
                   ref="servicesRoleRelService" protocol="dubbo" timeout="${dubbo.timeout}"
                   version="${dubbo.version}"/>                                      
	
    <dubbo:service interface="com.sandu.api.servicepurchase.serivce.biz.ServicesPurchaseBizService"
                   ref="servicesPurchaseBizService" protocol="dubbo" timeout="30000"
                   version="${dubbo.version}"/>

</beans>