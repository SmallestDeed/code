<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sandu.service.imallOrderPayment.dao.ImallOrderPaymentDetailsDao">

    <!--保存付款单-->
    <insert id="insertOrderPaymentDetails" parameterType="com.sandu.api.imallOrderPayment.model.ImallOrderPaymentDetails" keyProperty="id" useGeneratedKeys="true">
        insert into imall_order_payment_details
        (payment_id,pay_method,point_paid,pay_time,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted)
	    values(#{paymentId},#{payMethod},#{pointPaid},#{payTime},#{sys_code},#{creator},CURRENT_TIMESTAMP,#{modifier},CURRENT_TIMESTAMP,#{is_deleted})
    </insert>

    <!--通过id获取付款单信息-->
    <select id="getImallOrderPaymentDetails" resultType="com.sandu.api.imallOrderPayment.model.ImallOrderPaymentDetails">
      select id,payment_id,pay_method,point_paid,pay_time,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted
      from imall_order_payment_details
      where id=#{id}
    </select>

    <!--通过order_id获取付款单列表-->
    <select id="getImallOrderPaymentDetailsList" resultType="com.sandu.api.imallOrderPayment.model.ImallOrderPaymentDetails">
      select id,payment_id,pay_method,point_paid,pay_time,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted
      from imall_order_payment_details
      where payment_id=#{paymentId}
    </select>

</mapper>