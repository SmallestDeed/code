<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sandu.service.imallOrderPayment.dao.ImallOrderPaymentItemDao">

    <!--保存付款单-->
    <insert id="insertOrderPaymentItem" parameterType="com.sandu.api.imallOrderPayment.model.ImallOrderPaymentItem" keyProperty="id" useGeneratedKeys="true">
       insert into imall_order_payment_item
       (payment_id,item_id,item_sku,item_name,item_description,item_original_price,item_original_point,item_point,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted)
	  values(#{paymentId},#{itemId},#{itemSku},#{itemName},#{itemDescription},#{itemOriginalPrice},#{itemOriginalPoint},#{itemPoint},#{sysCode},#{creator},CURRENT_TIMESTAMP,#{modifier},CURRENT_TIMESTAMP,#{isDeleted})
    </insert>

    <!--通过id获取付款单信息-->
    <select id="getImallOrderPaymentItem" resultType="com.sandu.api.imallOrderPayment.model.ImallOrderPaymentItem">
      select id,payment_id,item_id,item_sku,item_name,item_description,item_original_price,item_original_point,item_point,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted
      from imall_order_payment_item
      where id=#{id}
    </select>

    <!--通过order_id获取付款单列表-->
    <select id="getImallOrderPaymentItemList" resultType="com.sandu.api.imallOrderPayment.model.ImallOrderPaymentItem">
      select id,payment_id,item_id,item_sku,item_name,item_description,item_original_price,item_original_point,item_point,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted
      from imall_order_payment_item
      where payment_id=#{paymentId}
    </select>

</mapper>