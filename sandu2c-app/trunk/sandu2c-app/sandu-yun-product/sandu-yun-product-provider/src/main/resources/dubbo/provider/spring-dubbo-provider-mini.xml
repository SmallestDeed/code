<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
					http://www.springframework.org/schema/beans/spring-beans.xsd
                    http://code.alibabatech.com/schema/dubbo
                    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 购物车服务 -->
    <dubbo:service interface="com.sandu.cart.service.MallBaseCartService" ref="mallBaseCartService" protocol="dubbo" timeout="${dubbo.timeout}" version="${dubbo.version}"/>

    <!-- 订单服务 -->
    <dubbo:service interface="com.sandu.order.service.MallBaseOrderService" ref="mallBaseOrderService" protocol="dubbo" timeout="${dubbo.timeout}" version="${dubbo.version}"/>

    <!-- 订单日志服务 -->
    <dubbo:service interface="com.sandu.order.service.MallOrderActionService" ref="mallOrderActionService" protocol="dubbo" timeout="${dubbo.timeout}" version="${dubbo.version}"/>

    <!-- 购物车产品服务 -->
    <dubbo:service interface="com.sandu.cart.service.MallCartProductRefService" ref="mallCartProductRefService"
                   protocol="dubbo" timeout="${dubbo.timeout}" version="${dubbo.version}"/>

</beans>