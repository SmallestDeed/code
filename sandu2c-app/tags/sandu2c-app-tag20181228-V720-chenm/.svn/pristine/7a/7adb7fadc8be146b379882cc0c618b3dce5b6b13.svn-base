<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sandu.user.dao.MediationAuthorizeMapper">


    <select id="selectMediationAuthorizeById" resultType="com.sandu.user.UserMediationAuthorize"
            parameterType="java.lang.Integer">
        select
        id, user_id, card_number, card_type, card_pic_id, status, authorize_time, create_time,
        gmt_modified, creator, modifier, is_deleted, remark,card_name
        from user_mediation_authorize
        where id = #{id,jdbcType=INTEGER} and is_deleted = 0
    </select>

    <select id="selectMediationAuthorizeByUserId" resultType="com.sandu.user.UserMediationAuthorize"
            parameterType="java.lang.Integer">
        select
        id, user_id, card_number, card_type, card_pic_id, status, authorize_time, create_time,
        gmt_modified, creator, modifier, is_deleted, remark,card_name
        from user_mediation_authorize
        where user_id = #{id,jdbcType=INTEGER} and is_deleted = 0
    </select>




    <insert id="insertMediationAuthorize" parameterType="com.sandu.user.UserMediationAuthorize" useGeneratedKeys="true" keyProperty="id">
        insert into user_mediation_authorize (id, user_id, card_number,
        card_type, card_pic_id, status,
        authorize_time, create_time, gmt_modified,
        creator, modifier, is_deleted,
        remark,card_name)
        values (#{id,jdbcType=INTEGER}, #{userId,jdbcType=INTEGER}, #{cardNumber,jdbcType=VARCHAR},
        #{cardType,jdbcType=INTEGER}, #{cardPicId,jdbcType=INTEGER}, 1,
        #{authorizeTime,jdbcType=TIMESTAMP}, #{createTime,jdbcType=TIMESTAMP}, #{gmtModified,jdbcType=TIMESTAMP},
        #{creator,jdbcType=VARCHAR}, #{modifier,jdbcType=VARCHAR}, #{isDeleted,jdbcType=INTEGER},
        #{remark,jdbcType=VARCHAR},#{cardName,jdbcType=VARCHAR})
    </insert>


    <update id="updateMediationReAuthorize" parameterType="com.sandu.user.UserMediationAuthorize"  useGeneratedKeys="true" keyProperty="id">
        update user_mediation_authorize
        <set>
            status = 1,
            <if test="userId != null">
                user_id = #{userId,jdbcType=INTEGER},
            </if>
            <if test="cardNumber != null">
                card_number = #{cardNumber,jdbcType=VARCHAR},
            </if>
            <if test="cardType != null">
                card_type = #{cardType,jdbcType=INTEGER},
            </if>
            <if test="cardPicId != null">
                card_pic_id = #{cardPicId,jdbcType=INTEGER},
            </if>

            <if test="authorizeTime != null">
                authorize_time = #{authorizeTime,jdbcType=TIMESTAMP},
            </if>
            <if test="createTime != null">
                create_time = #{createTime,jdbcType=TIMESTAMP},
            </if>
            <if test="gmtModified != null">
                gmt_modified = #{gmtModified,jdbcType=TIMESTAMP},
            </if>
            <if test="creator != null">
                creator = #{creator,jdbcType=VARCHAR},
            </if>
            <if test="modifier != null">
                modifier = #{modifier,jdbcType=VARCHAR},
            </if>
            <if test="remark != null">
                remark = #{remark,jdbcType=VARCHAR},
            </if>
            <if test="cardName != null">
                card_name = #{cardName,jdbcType=VARCHAR},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>

    <select id="getUserSourceCompany" resultType="string">
        SELECT
          d.name
        FROM sys_user s,sys_dictionary d
        WHERE
          s.source_company = d.value AND
          d.type = 'userSourceCompany' AND
          s.id = #{userId}
    </select>

</mapper>
