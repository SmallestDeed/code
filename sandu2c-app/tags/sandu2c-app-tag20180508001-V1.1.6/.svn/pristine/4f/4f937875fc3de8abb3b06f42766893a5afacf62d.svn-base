    private final static String CLASS_LOG_PREFIX = "[供求基础服务]";

    private static final String DEFAULT_MOBILE = "^((13[0-9])|(14[5,7,9])|(15[^4])|(18[0-9])|(17[0,1,3,5,6,7,8]))\\\\d{8}$";

    private final static String filePath = "classpath:config/sensitivewords.properties";

    private static Map<Integer, Long> validMap = new HashMap<>();

    @Autowired
