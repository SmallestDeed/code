<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.base.dao.BaseBannerPositionMapper">

    <!-- **常量定义** -->
    <sql id="All_Column_List">
        id,code,name,remark,type,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted
    </sql>

    <select id="getPositionByTypeAndCode" resultType="com.sandu.banner.model.BaseBannerPosition" parameterType="com.sandu.banner.input.BaseBannerPositionQuery">
        SELECT
           <include refid="All_Column_List" />
        FROM base_banner_position
        WHERE 1=1
        <if test="type!= null">
            and type = #{type,jdbcType=INTEGER}
        </if>
        <if test="code!= null">
            and code = #{code,jdbcType=VARCHAR}
        </if>
    </select>

</mapper>