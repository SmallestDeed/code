	<!-- **查询定义** -->
	<!-- 按主键查询 -->
	<select id="selectByPrimaryKey" resultMap="AllResultMap"
		parameterType="java.lang.Integer">
		select
		<include refid="All_Column_List" />
		from auto_render_res_render_pic
		where
		<!-- is_deleted=0 and -->
		id = #{id,jdbcType=INTEGER}
	</select>

	<!-- 单点二维码图片。get720SingleCode 得到720单点分享需要的code -->
	<select id="get720SingleCode" parameterType="com.nork.mobile.model.search.AutoRenderResRenderPic"
		resultType="com.nork.mobile.model.search.AutoRenderResRenderPic">
		SELECT sys_code sysCode FROM auto_render_res_render_pic WHERE id=#{id}
	</select>

	<!-- 多点二维码图片           get720RomanCode.得到720多点分享的code -->
	<select id="get720RomanCode" parameterType="com.nork.mobile.model.search.AutoRenderResRenderPic"
		resultType="com.nork.mobile.model.search.AutoRenderResRenderPic">
		SELECT 
			B.uuid 
		FROM 
			(SELECT 
				id 
			FROM 
				auto_render_res_render_pic
			WHERE
				id = #{id}) A 
		INNER JOIN design_render_roam B ON A.id = B.screen_shot_id;
	</select>
