<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.base.dao.BaseAreaDao">
	<sql id="areaListColumns">
		a.id,
		a.area_code,
		a.area_name
	</sql>

	<select id="getOpenServiceCityList"
		resultType="com.sandu.base.model.vo.BaseAreaVo">
		SELECT b.area_name,b.area_code,b.level_id,b.id from
		base_openservice_city a
		INNER JOIN base_area b on a.city_id=b.id
		ORDER BY a.order_no;
	</select>
	<select id="findFontAllList"
		resultType="com.sandu.base.model.vo.BaseAreaVo"
		parameterType="com.sandu.base.model.query.BaseAreaQuery">
		SELECT
		<include refid="areaListColumns" />
		FROM base_area a
		WHERE a.is_deleted = #{DEL_FLAG_NORMAL}
		<if test="levelId != null and  levelId != '' ">
			AND a.level_id = #{levelId}
		</if>
		<if test="orderBy != null and  orderBy !=''  ">order by #{orderBy}</if>
		<if test="orderBy == null and  orderBy == null ">order by a.id desc</if>
	</select>

</mapper>