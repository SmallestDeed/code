@Service("companyDesignerService")
@Transactional(readOnly = true)
public class CompanyDesignerServiceImpl implements CompanyDesignerService {
	private static final Logger logger = LoggerFactory.getLogger(CompanyShopServiceImpl.class.getName());
    @Autowired
    private CompanyDesignerDao companyDesignerDao;
    
	@Override
	public List<CompanyDesignerVo> getTopDesigner(Long id) {
		List<CompanyDesignerVo> lstVo = companyDesignerDao.getTopDesigner(id);
		
		return lstVo;
	}

	@Override
	public int getDesignerCount(Long companyId) {
		return companyDesignerDao.getDesignerCount(companyId);
	}

}
