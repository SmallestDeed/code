<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.sys.dao.SysDictionaryDao">

  	<select id="findListByType"  resultType="com.sandu.sys.model.vo.SysDictionaryVo"
					 parameterType="com.sandu.sys.model.query.SysDictionaryQuery">
		SELECT a.id,a.name,a.value
		FROM  sys_dictionary a where 1=1
		<if test="type != null and  type != '' ">
			AND a.type = #{type}
		</if>
		and a.is_deleted = #{DEL_FLAG_NORMAL}
	</select>

	<select id="findListByTypeOrValues"  resultType="com.sandu.sys.model.vo.SysDictionaryVo"
			parameterType="com.sandu.sys.model.query.SysDictionaryQuery">
		SELECT a.id,a.name,a.value
		FROM  sys_dictionary a where 1=1
		<if test="type != null and  type != '' ">
			AND a.type = #{type}
		</if>
		<choose>
			<when test="valueList != null and valueList.size() > 0">
				and value IN
				<foreach item="item" collection="valueList" separator="," open="(" close=")" index="">
					#{item}
				</foreach>
			</when>
			<otherwise>
				and id = -1
			</otherwise>
		</choose>
		and a.is_deleted = #{DEL_FLAG_NORMAL}
	</select>

	<select id="findDictionory"  resultType="com.sandu.sys.model.vo.SysDictionaryVo"
			parameterType="com.sandu.sys.model.query.SysDictionaryQuery">
		SELECT a.id,a.name,a.value,rp.pic_path
		FROM  sys_dictionary a
		left join res_pic rp on rp.id = a.pic_id
		where 1=1
		<if test="type != null and  type != '' ">
			AND a.type = #{type}
		</if>
		<if test="value != null and  value != 0 ">
			AND a.value = #{value}
		</if>
		and a.is_deleted = #{DEL_FLAG_NORMAL}
		limit 1
	</select>


	<select id="getListByType" resultType="com.sandu.sys.model.SysDictionary">
		SELECT * FROM sys_dictionary
		WHERE is_deleted = 0
		AND type = #{type}
		limit #{start},#{pageSize}
	</select>

</mapper>