<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.base.dao.BaseProductCategoryDao">
	<sql id="categoyColumns">
		a.id,
		a.pid,
		a.name,
		a.level
	</sql>
	
	<sql id="categoyListColumns">
		a.id,
		a.pid,
		a.name,
		a.level
	</sql> 
	
  <select id="findFontAllList"  resultType="com.sandu.base.model.vo.BaseProductCategoryVo"
      parameterType="com.sandu.base.model.query.BaseProductCategoryQuery">
		SELECT
		<include refid="categoyListColumns" />
		FROM  base_area a 
		WHERE a.is_deleted = #{DEL_FLAG_NORMAL} 
	    <if test="levelId != null and  levelId != '' ">
			AND a.level_id = #{levelId}
		</if>
		<if test="orderBy != null and  orderBy !=''  ">order by #{orderBy}</if>
        <if test="orderBy == null and  orderBy == null ">order by a.id desc</if>
        
	</select>
	
</mapper>