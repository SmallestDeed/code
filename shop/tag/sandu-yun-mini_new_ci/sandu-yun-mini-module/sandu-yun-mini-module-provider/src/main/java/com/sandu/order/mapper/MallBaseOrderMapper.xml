<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.order.dao.MallBaseOrderDao">

    <select id="countMallBaseOrderSuccess" resultType="int">
		SELECT
			count(*)
		FROM
			mall_base_order
		WHERE
			user_id = #{userId} AND
			is_deleted = 0 AND
			pay_status = 2
	</select>

</mapper>