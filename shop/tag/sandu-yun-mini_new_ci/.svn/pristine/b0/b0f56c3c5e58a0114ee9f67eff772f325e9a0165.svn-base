<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sandu.interaction.dao.PlanCollectionDao">
	<insert id="insert"  parameterType="com.sandu.interaction.model.Collection">
 		insert into interaction_plan_collection (obj_id,obj_name,
 		user_id,sys_code,creator,gmt_create,modifier,gmt_modified,is_deleted)
    	 values (#{objId},#{objName},#{userId},#{sysCode},#{creator},#{gmtCreate},
    	 #{modifier},#{gmtModified},#{isDeleted})
	</insert>

	<delete id="delete" parameterType="com.sandu.interaction.model.Collection">
		delete from interaction_plan_collection  
		where id=#{id}
	</delete>

	<select id="findFontPageList"  resultType="com.sandu.interaction.model.vo.CollectionVo"
      parameterType="com.sandu.interaction.model.query.CollectionQuery">
		SELECT
		id,obj_id,obj_name,user_id
		FROM  interaction_plan_collection a 
		WHERE a.is_deleted = #{DEL_FLAG_NORMAL} 
	  	<if test="objId != null and  objId != '' ">
			AND a.obj_id = #{objId}
		</if>
		 <if test="userId != null and  userId !='' ">
			AND a.user_id = #{userId}
		</if>
		 <if test="orderBy != null and  orderBy !=''  ">order by #{orderBy}</if>
        <if test="orderBy == null and  orderBy == null ">order by a.id desc</if>
        limit #{start},#{pageSize} 
	</select>
	
	<select id="findFontCount"  resultType="long"
      parameterType="com.sandu.interaction.model.query.CollectionQuery">
		SELECT count(a.id)
		FROM  interaction_plan_collection a 
		WHERE a.is_deleted = #{DEL_FLAG_NORMAL} 
	    <if test="objId != null and  objId != '' ">
			AND a.obj_id = #{objId}
		</if>
		 <if test="userId != null and  userId !='' ">
			AND a.user_id = #{userId}
		</if>
	</select>
	<select id="count"  resultType="int"  parameterType="com.sandu.interaction.model.query.CollectionQuery">
		SELECT count(a.id)
		FROM  interaction_plan_collection a 
		WHERE 1=1 
			    <if test="objId != null and  objId != '' ">
			AND a.obj_id = #{objId}
		</if>
		<if test="userId != null and  userId != '' ">
			AND a.user_id = #{userId}
		</if>
	</select>

</mapper>